@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reestablecer Contraseña";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="row w-100">
        <div class="col-md-6 offset-md-3">
            <div class="text-center shadow-sm" style="border: 5px solid #ddd; border-radius: 10px; padding: 40px;">
                <h1 class="mb-4">@ViewData["Title"]</h1>
                <p class="mb-4">Introduce una nueva contraseña.</p>
                <div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <input asp-for="Input.Email" class="form-control" type="hidden" />
                            <input asp-for="Input.Code" class="form-control" type="hidden" />

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label fw-bold">Nueva contraseña *</label>
                                <input asp-for="Input.Password" class="form-control" type="password"
                                    placeholder="Nueva contraseña" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label fw-bold">Vuelve a introducir tu
                                    nueva contraseña *</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" type="password"
                                    placeholder="Confirma tu nueva contraseña" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-danger px-5" style="display: flex; !important">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}