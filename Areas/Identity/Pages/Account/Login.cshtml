@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        background-color: #f8f9fa;
    }

    .login-wrapper {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .login-form-section {
        background-color: #F4F4F4;
        border-radius: 1rem;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 100%;
        max-width: 460px;
    }

    .login-form-section input.form-control {
        border: 2px solid #D42025;
        border-radius: 0.5rem;
        padding: 0.8rem;
    }

    .login-btn {
        background-color: #E42229;
        color: #fff;
        border-radius: 0.5rem;
        font-weight: bold;
        padding: 1rem;
        transition: background-color 0.3s ease;
    }

    .login-btn:hover {
        background-color: #D42025;
    }

    .login-title {
        color: #000;
        font-size: 1.8rem;
        font-weight: 700;
        letter-spacing: 1px;
        text-align: center;
        margin-bottom: 2rem;
        text-transform: uppercase;
    }

    .remember-label i {
        color: #D42025;
    }

    .login-image-section {
        background-color: #E42229;
        border-radius: 1rem;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
    }

    .login-image-section img {
        width: 100%;
        max-height: 100%;
        object-fit: cover;
        border-radius: 1rem;
    }
</style>

<div class="login-wrapper">
    <div class="container">
       <div class="row justify-content-center gx-0"> 
    
    <div class="col-md-6 d-flex justify-content-end p-0"> 
        <div class="login-form-section">
            <div class="login-title">@ViewData["Title"]</div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label text-danger">Usuario</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="ejemplo@correo.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label text-danger">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mb-3">
                    <a asp-page="./ForgotPassword" class="text-decoration-none" style="color: #626C66;">¿Has olvidado tu contraseña?</a>
                </div>

                <div class="form-check d-flex align-items-center mb-4">
                    <input class="form-check-input me-2" asp-for="Input.RememberMe" id="rememberMe" />
                    <label class="form-check-label remember-label" for="rememberMe" style="color: #626C66;">
                        <i class="bi bi-save2 me-1"></i> Recordar mis datos
                    </label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn w-100 login-btn">Ingresar</button>
                </div>

                <div class="text-center">
                    <p class="fw-bold text-danger mb-0">Registrarse</p>
                    <p class="mb-0" style="color: #626C66;">
                        Si aún no tienes cuenta,
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-danger text-decoration-none">regístrate aquí</a>.
                    </p>
                    <p class="mt-2">
                        <a asp-page="./ResendEmailConfirmation" class="text-danger text-decoration-none">Reenviar correo de confirmación</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Sección de la imagen -->
    <div class="col-md-6 p-0"> <!-- Sin margen/padding -->
        <div class="login-image-section">
            <img src="path-to-your-image.jpg" alt="Imagen de bienvenida" />
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}