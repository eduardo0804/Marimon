@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="login_container">
    <div class="login_form">
        <h3>Iniciar sesión con</h3>
        
        <!-- Sección de iniciar sesión con proveedores externos -->
        <div class="login_option">
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="option">
                        <p class="no-providers">
                            No hay servicios de autenticación externos configurados. 
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715">Más información sobre la configuración de servicios externos</a>.
                        </p>
                    </div>
                }
                else
                {
                    <div class="option">
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="social-login-btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                    @if (provider.Name.ToLower().Contains("google"))
                                    {
                                        <div class="google-icon"></div>
                                    }
                                    <span>@provider.DisplayName</span>
                                </button>
                            }
                        </form>
                    </div>
                }
            }
        </div>
        
        <p class="separator">
            <span>o</span>
        </p>
        
        <!-- Sección de iniciar sesión con cuenta local -->
        <section class="local-login">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <!-- Email input box -->
                <div class="input_box">
                    <label asp-for="Input.Email">Correo electrónico</label>
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Ingresa tu correo electrónico" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <!-- Password input box -->
                <div class="input_box">
                    <div class="password_title">
                        <label asp-for="Input.Password">Contraseña</label>
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    </div>
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Ingresa tu contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <!-- Remember me checkbox -->
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Recuérdame
                    </label>
                </div>
                
                <!-- Login button -->
                <button id="login-submit" type="submit">Iniciar sesión</button>
                
                <p class="sign_up">¿No tienes una cuenta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a></p>
            </form>
        </section>
        
        <!-- Información de depuración (mantenida del original) -->
        <div class="debug-info">
            <div class="alert alert-info">
                <p>Proveedores disponibles: @(Model.ExternalLogins?.Count ?? 0)</p>
                @if (Model.ExternalLogins != null && Model.ExternalLogins.Any())
                {
                    foreach (var provider in Model.ExternalLogins)
                    {
                        <p>- @provider.Name (@provider.DisplayName)</p>
                    }
                }
                else
                {
                    <p>No hay proveedores configurados</p>
                }
            </div>
        </div>
    </div>

    
    <div class="login_image">
        <img src="~/images/login.jpg" alt="Imagen de la empresa" />
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}