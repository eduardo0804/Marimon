@page
@model Marimon.Areas.Identity.Pages.Account.Manage.Pedidos
@{
    ViewData["Title"] = "Pedidos";
}

<link rel="stylesheet" href="~/css/perfil_usuario.css" asp-append-version="true" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="user-profile-container">
    <div class="profile-header">
        <h1>Detalle Usuario</h1>
    </div>
    <div class="profile-content">
        <div class="sidebar">
            <div class="sidebar-menu-item ">
                <a asp-area="Identity" asp-page="/Account/Manage/Index">Detalle de la cuenta</a>
            </div>
            <div class="sidebar-menu-item active">
                <span>Mis Pedidos</span>
            </div>
            <div class="sidebar-menu-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Citas">Mis Citas</a>
            </div>
            <div class="sidebar-menu-item exit">
                <form asp-area="Identity" asp-page="/Account/Logout"
                    asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit">SALIR</button>
                </form>
            </div>
        </div>
        <div class="profile-details">
            <h2>Mis Pedidos</h2>

            @if (Model.PedidosUsuario != null && Model.PedidosUsuario.Any())
            {
                <div class="accordion" id="accordionPedidos">
                    @for (int i = 0; i < Model.PedidosUsuario.Count; i++)
                    {
                        var pedido = Model.PedidosUsuario[i];
                        var collapseId = $"collapse{i}";
                        var headingId = $"heading{i}";
                        <div class="accordion-item mb-3">
                            <h2 class="accordion-header" id="@headingId">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                    Pedido ID: @pedido.ven_id - Fecha: @pedido.ven_fecha.ToString("dd/MM/yyyy")
                                    <span class="ms-3">
                                        @if (pedido.Estado == "Pendiente")
                                        {
                                            <span class="badge bg-warning text-dark">Pendiente</span>
                                        }
                                        else if (pedido.Estado == "Completado")
                                        {
                                            <span class="badge bg-success">Completado</span>
                                        }
                                        else if (pedido.Estado == "Cancelado")
                                        {
                                            <span class="badge bg-danger">Cancelado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@pedido.Estado</span>
                                        }
                                    </span>
                                </button>
                            </h2>
                            <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId"
                                data-bs-parent="#accordionPedidos">
                                <div class="accordion-body">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Producto</th>
                                                <th>Cantidad</th>
                                                <th>Precio</th>
                                                <th>Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var detalle in pedido.Detalles)
                                            {
                                                <tr>
                                                    <td>@detalle.Autoparte.aut_nombre</td>
                                                    <td>@detalle.det_cantidad</td>
                                                    <td>S/. @detalle.Autoparte.aut_precio.ToString("0.00")</td>
                                                    <td>S/. @detalle.det_subtotal.ToString("0.00")</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                                <td><strong>S/. @pedido.Detalles.Sum(d =>
                                                                                                        d.det_subtotal).ToString("0.00")</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                            <p><strong>MÃ©todo de pago:</strong> @pedido.MetodoPago?.pag_metodo</p>
                        </div>
                    </div>
                </div>
                                }
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center mt-4" role="alert">
                    <strong>No se encontraron Pedidos.</strong> Por favor, realiza una compra antes.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
