@model Marimon.ViewModel.FavoritosViewModel

@if (Model.Favoritos == null || !Model.Favoritos.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-heart-broken fa-4x text-muted mb-4"></i>
        <h4 class="text-muted mb-3">No tienes favoritos @(!string.IsNullOrEmpty(Model.TerminoBusqueda) ? "que coincidan con tu búsqueda" : "guardados")</h4>
        @if (!string.IsNullOrEmpty(Model.TerminoBusqueda))
        {
            <p class="text-muted mb-4">Intenta con otros términos de búsqueda</p>
            <button class="btn btn-outline-primary" onclick="buscarFavoritos('')">
                <i class="fas fa-arrow-left me-2"></i>Ver todos los favoritos
            </button>
        }
        else
        {
            <p class="text-muted mb-4">Explora nuestra tienda y guarda tus autopartes favoritas</p>
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-shopping-basket me-2"></i>Explorar catálogo
            </a>
        }
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var favorito in Model.Favoritos)
        {
            <div class="col favorito-item" id="favorito-@favorito.AutoparteId">
                <div class="card h-100 shadow-sm">
                    <div class="position-relative">
                        <img src="@favorito.AutoparteImagen" class="card-img-top" alt="@favorito.AutoparteNombre" 
                            style="height: 180px; object-fit: cover;">
                        <button class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2" 
                                onclick="eliminarFavorito(@favorito.AutoparteId)" title="Quitar de favoritos">
                            <i class="fas fa-heart-broken"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-truncate">@favorito.AutoparteNombre</h5>
                        <p class="card-text text-muted small mb-2 text-truncate">@favorito.AutoparteDescripcion</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">S/ @favorito.AutopartePrecio.ToString("0.00")</span>
                            <a asp-controller="Catalogo" asp-action="DetalleAutoparte" asp-route-id="@favorito.AutoparteId" 
                                class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>Ver detalles
                            </a>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-grid">
                            <button class="btn btn-success btn-sm" onclick="añadirAlCarritoDesdeVista(@favorito.AutoparteId, 1)">
                                <i class="fas fa-cart-plus me-1"></i>Añadir al carrito
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}