@model List<Marimon.Models.Autoparte>

@{
    ViewData["Title"] = "Catálogo - AUTOMOTRIZ MARIMON S.A.C";
}

<!-- Incluir Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    .catalogo-container {
        font-family: 'Nunito', sans-serif;
        padding: 30px 0;
    }

    .filtros-container {
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    .producto-card {
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid #eee;
    }

    .producto-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }

    .producto-img {
        height: 150px;
        object-fit: contain;
        padding: 10px;
    }

    .precio {
        color: #333;
        font-size: 0.9rem;
    }

    .pagination .page-item.active .page-link {
        background-color: #343a40;
        border-color: #343a40;
    }

    .pagination .page-link {
        color: #343a40;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .accordion-button:not(.collapsed) {
        background-color: #f8f9fa;
        color: #333;
    }

    .accordion-button:focus {
        box-shadow: none;
        border-color: rgba(0, 0, 0, .125);
    }

    .form-check-input:checked {
        background-color: #28a745;
        border-color: #28a745;
    }

    .carrito-lateral {
        position: fixed;
        top: 100px;
        right: 20px;
        width: 300px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        z-index: 1050;
        max-height: 80vh;
        overflow-y: auto;
        transition: all 0.3s ease-in-out;
        border: none;
        padding-bottom: 10px;
        font-family: 'Nunito', sans-serif;
    }

    .lista-carrito li {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 10px;
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .lista-carrito img {
        width: 50px;
        height: 50px;
        object-fit: contain;
        border-radius: 6px;
    }

    .lista-carrito .flex-grow-1 {
        font-size: 0.85rem;
        color: #333;
    }

    .lista-carrito .btn-outline-secondary {
        border: none;
        background-color: #eee;
        color: #333;
        font-weight: bold;
        padding: 4px 10px;
        border-radius: 50%;
        font-size: 0.85rem;
        transition: background 0.2s ease;
    }

    .lista-carrito .btn-outline-secondary:hover {
        background-color: #ddd;
    }

    .subtotal {
        font-size: 1rem;
        font-weight: bold;
        text-align: right;
        border-top: 1px solid #eee;
        margin-top: 10px;
        padding-top: 10px;
    }

    /* Estilos para el buscador - Versión Moderna y Futurista */
    .search-container {
        max-width: 600px;
        margin: 0 auto 25px;
        position: relative;
    }

    /* Contenedor principal con efecto de brillo en el borde */
    .search-input-group {
        display: flex;
        width: 100%;
        border-radius: 50px;
        border: 2px solid rgba(40, 167, 69, 0.5);
        overflow: hidden;
        box-shadow: 0 6px 16px rgba(40, 167, 69, 0.12);
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(5px);
    }

    .search-input-group:hover {
        box-shadow: 0 8px 20px rgba(40, 167, 69, 0.2);
        border-color: rgba(40, 167, 69, 0.7);
        transform: translateY(-2px);
    }

    .search-input-group:focus-within {
        box-shadow: 0 10px 25px rgba(40, 167, 69, 0.25);
        border-color: #28a745;
        transform: translateY(-3px);
    }

    /* Campo de búsqueda con transición suave */
    .search-box {
        flex: 1;
        padding: 12px 20px 12px 50px; /* Espacio para el ícono */
        border: none !important;
        outline: none;
        font-size: 0.95rem;
        height: 50px;
        background-color: transparent;
        transition: all 0.3s ease;
        font-weight: 500;
        letter-spacing: 0.3px;
        color: #444;
    }

    .search-box:focus {
        box-shadow: none;
        color: #222;
    }

    .search-box::placeholder {
        color: #aaa;
        transition: opacity 0.3s ease;
    }

    .search-box:focus::placeholder {
        opacity: 0.6;
    }

    /* Ícono de lupa */
    .search-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: #28a745;
        font-size: 18px;
        z-index: 10;
        transition: all 0.3s ease;
        pointer-events: none;
    }

    .search-input-group:focus-within .search-icon {
        color: #218838;
        transform: translateY(-50%) scale(1.1);
    }

    /* Botón de búsqueda con efecto de hover elegante */
    .search-btn {
        height: 50px;
        min-width: 100px;
        padding: 0 25px !important;
        font-weight: 600;
        background: linear-gradient(45deg, #28a745, #20c997) !important;
        border: none !important;
        color: white;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .search-btn:hover {
        background: linear-gradient(45deg, #218838, #1ba87c) !important;
        box-shadow: 0 0 15px rgba(40, 167, 69, 0.4);
    }

    .search-btn:active {
        transform: scale(0.98);
    }

    /* Efecto de onda sin keyframes */
    .search-btn::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.3);
        opacity: 0;
        transform: translate(-50%, -50%) scale(0);
        transition: transform 0.5s ease-out, opacity 0.5s ease-out;
    }

    .search-btn:active::after {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
        transition: 0s;
    }

    /* Sugerencias de búsqueda con estilo moderno */
    .search-suggestion {
        margin-top: 12px;
        color: #666;
        font-size: 0.85rem;
        opacity: 0.9;
        transition: all 0.3s ease;
        transform: translateY(0);
    }

    .search-input-group:focus-within + .search-suggestion {
        opacity: 1;
        transform: translateY(3px);
        color: #28a745;
    }
</style>

<div class="container catalogo-container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center">Catálogo de Repuestos</h2>
        </div>
    </div>

    <!-- Fila para el buscador mejorado -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="search-container">
                <form form asp-controller="Catalogo" asp-action="Index" method="get" class="d-flex justify-content-center">
                    <div class="search-input-group">
                        <!-- Ícono de lupa -->
                        <i class="fas fa-search search-icon"></i>
                        <!-- Campo de búsqueda -->
                        <input type="text" name="buscar" class="search-box" placeholder="¿Qué repuesto estás buscando hoy?">
                        <!-- Botón de búsqueda -->
                        <button class="btn search-btn" type="submit">
                            Buscar
                        </button>
                    </div>
                </form>
                <div class="search-suggestion text-center mt-2">
                    Prueba a buscar "filtro de aceite", "frenos", "amortiguadores"...
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Productos -->
        <div class="col-md-9">
            <div class="row mb-3">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <div class="ordenar-por d-flex align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success rounded-pill px-3">Relevancia</button>
                            <button type="button"
                                class="btn btn-sm btn-outline-secondary rounded-pill px-3 ms-2">Precio</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill px-3 ms-2">Más
                                nuevo</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var autoparte in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card producto-card h-100 shadow-sm">
                            <div class="p-3 text-center">
                                <img src="@Url.Content(autoparte.aut_imagen)" class="card-img-top producto-img"
                                    alt="@autoparte.aut_nombre">
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title">@autoparte.aut_nombre</h5>
                                <p class="card-text precio">Precio: <strong>S/
                                        @autoparte.aut_precio.ToString("0.00")</strong></p>
                                <button class="btn-primary" type="submit">Añadir Carrito</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
                            </li>

                            <li class="page-item">
                                <a class="page-link" href="#">Siguiente</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>