@model List<Marimon.Models.Autoparte>

@{
    ViewData["Title"] = "Catálogo - AUTOMOTRIZ MARIMON S.A.C";
}

<!-- Incluir Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="~/css/catalogo.css" asp-append-version="true" />




<div class="container catalogo-container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center">Catálogo de Repuestos</h2>
        </div>
    </div>

    <!-- Fila para el buscador mejorado -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="search-container">
                <form asp-controller="Catalogo" asp-action="Index" method="get" class="d-flex justify-content-center">
                    <div class="search-input-group">
                        <!-- Ícono de lupa -->
                        <i class="fas fa-search search-icon"></i>
                        <!-- Campo de búsqueda -->
                        <input type="text" name="buscar" class="search-box" placeholder="¿Qué repuesto estás buscando hoy?">
                        <!-- Botón de búsqueda -->
                        <button class="btn search-btn" type="submit">
                            Buscar
                        </button>
                    </div>
                </form>
                <div class="search-suggestion text-center mt-2">
                    Prueba a buscar "filtro de aceite", "frenos", "amortiguadores"...
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- Productos - Cambiado a col-md-12 para usar todo el ancho -->
        <div class="col-md-12">
            <div class="row mb-3">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <div class="ordenar-por d-flex align-items-center">
                        <span class="me-2">Ordenar por:</span>
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success rounded-pill px-3">Relevancia</button>
                            <button type="button"
                                class="btn btn-sm btn-outline-secondary rounded-pill px-3 ms-2">Precio</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill px-3 ms-2">Más
                                nuevo</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Mensaje de no resultados -->
            <div class="no-resultados" id="noResultados">
                <i class="fas fa-search fa-2x mb-3"></i>
                <p>No se encontraron productos que coincidan con tu búsqueda.</p>
                <p class="mt-2">Intenta con otros términos o navega por nuestras categorías.</p>
            </div>

            <div class="row" id="productosContainer">
                @foreach (var autoparte in Model)
                {
                    <div class="col-md-4 mb-4 producto-item" 
                         data-nombre="@autoparte.aut_nombre.ToLower()" 
                         data-descripcion="@(autoparte.aut_descripcion?.ToLower() ?? "")" 
                         data-categoria="@(autoparte.Categoria?.cat_nombre?.ToLower() ?? "")">
                        <div class="card producto-card h-100 shadow-sm">
                            <div class="p-3 text-center">
                                <img src="@Url.Content(autoparte.aut_imagen)" class="card-img-top producto-img"
                                    alt="@autoparte.aut_nombre">
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title">@autoparte.aut_nombre</h5>
                                <p class="card-text precio">Precio: <strong>S/
                                        @autoparte.aut_precio.ToString("0.00")</strong></p>
                                <button class="btn btn-primary" type="button">Añadir Carrito</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
                            <li class="page-item">
                                <a class="page-link" href="#">Siguiente</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>