@model Marimon.Models.ViewModels.AutoparteViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Detalles Autoparte</title>

    <!-- Bootstrap y Estilos -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Nunito', sans-serif;
        }

        .modal-custom {
            display: block;
            position: fixed;
            z-index: 1050;
            left: 0; top: 0;
            width: 100%; height: 100%;
            background: radial-gradient(circle at center, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.6) 100%);
            overflow: auto;
            padding: 60px 20px;
        }

        .modal-content-custom {
            background-color: #ffffff;
            border-radius: 25px;
            padding: 40px;
            max-width: 1000px;
            margin: auto;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            position: relative;
        }

        .autoparte-img {
            width: 100%;
            max-height: 500px;
            object-fit: contain;
            border-radius: 20px;
            transition: transform 0.3s ease, transform-origin 0.3s ease;
            cursor: zoom-in;
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

        .autoparte-img.zoomed {
            transform: scale(2);
            cursor: zoom-out;
            transition: transform 0.3s ease, transform-origin 0.3s ease;
        }

        .favorito-icon {
            font-size: 28px;
            color: #e63946;
            cursor: pointer;
            transition: color 0.3s;
        }

        .favorito-icon:hover {
            color: #d32f2f;
        }

        .favorito-icon-checked {
            color: #d32f2f; /* Cambia el color cuando está marcado */
        }

        .favorito-icon-checked:hover {
            color: #b71c1c; /* Cambia el color al pasar el ratón cuando está marcado */
        }

        .precio {
            font-size: 28px;
            font-weight: 700;
            color: #212529;
            margin-top: 20px;
        }

        .btn-whatsapp, .btn-carrito {
            border-radius: 40px;
            padding: 10px 24px;
            font-size: 16px;
            transition: all 0.3s ease;
            font-weight: 600;
        }

        .btn-whatsapp {
            background-color: #25D366;
            color: white;
        }

        .btn-whatsapp:hover {
            background-color: #1ebd5a;
        }

        .btn-carrito {
            background-color: #e63946;
            color: white;
        }

        .btn-carrito:hover {
            background-color: #c62828;
        }

        .close-btn {
            font-size: 34px;
            color: #999;
            cursor: pointer;
            font-weight: bold;
            position: absolute;
            top: 20px;
            right: 20px;
            background: none;
            border: none;
            outline: none;
            z-index: 10;
        }

        .close-btn:hover {
            color: #333;
        }

        h4 {
            font-weight: 700;
        }

        .detalle-item {
            margin-bottom: 12px;
        }

        .detalle-item strong {
            display: block;
            margin-bottom: 4px;
            color: #343a40;
        }

        .custom-tabs .nav-link {
            color: #212529;
            font-weight: 600;
        }

        .custom-tabs .nav-link.active {
            color: #000000 !important;
            background-color: #f8f9fa;
            border-color: #dee2e6 #dee2e6 #fff;
        }
    </style>
</head>
<body>

    <!-- TOAST: Alerta de éxito al agregar a Favoritos -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
        <div id="toastFavorito" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <strong>Favorito:</strong> La autoparte fue agregada correctamente a tus favoritos.
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    </div>

    <!-- MODAL DETALLE AUTOPARTE -->
    <div class="modal-custom" id="modalAutoparte">
        <div class="modal-content-custom" id="modalContent">
            <button class="close-btn" onclick="cerrarModal()">×</button>

            <div class="row mb-4">
                <div class="col text-center">
                    <h3 class="text-uppercase text-secondary fw-bold border-bottom pb-2 d-inline-block">Detalle de Autoparte</h3>
                </div>
            </div>

            <div class="row g-4 align-items-center">
                <div class="col-md-6 text-center position-relative">
                    <i class="fa-solid fa-heart favorito-icon position-absolute top-0 end-0 m-3" onclick="agregarFavorito()"></i>
                    <img id="imgAutoparte" src="@Model.aut_imagen" alt="Autoparte" class="autoparte-img" />
                </div>

                <div class="col-md-6">
                    <h2 class="fw-bold">@Model.aut_nombre</h2>
                    <p class="text-muted">@Model.aut_descripcion</p>

                    <!-- Tabs Detalles / Similares -->
                    <ul class="nav nav-tabs justify-content-center mb-3 custom-tabs" id="detalleTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="detalles-tab" data-bs-toggle="tab" data-bs-target="#detalles" type="button" role="tab" aria-controls="detalles" aria-selected="true">Detalles</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="similares-tab" data-bs-toggle="tab" data-bs-target="#similares" type="button" role="tab" aria-controls="similares" aria-selected="false">Ver productos similares</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="detalleTabsContent">
                        <div class="tab-pane fade show active" id="detalles" role="tabpanel" aria-labelledby="detalles-tab">
                            <ul class="list-unstyled">
                                <li><i class="fa-solid fa-circle-check text-danger me-2"></i><strong>Especificación:</strong> @Model.aut_especificacion</li>
                                <li><i class="fa-solid fa-circle-check text-danger me-2"></i><strong>Categoría:</strong> @Model.CategoriaNombre</li>
                            </ul>
                            <div class="precio mb-4">
                                <span class="fs-3 fw-bold text-danger">S/ @Model.aut_precio.ToString("0.00")</span>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="similares" role="tabpanel" aria-labelledby="similares-tab">
                            <ul class="list-group">
                                @foreach (var similar in Model.ProductosSimilares)
                                {
                                    <li class="list-group-item d-flex align-items-center">
                                        <img src="@similar.aut_imagen" alt="@similar.aut_nombre" class="img-thumbnail me-3" style="width: 80px; height: 80px;" />
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <a href="javascript:void(0);" onclick="cargarDetalleAutoparte(@similar.aut_id)" class="text-decoration-none text-dark">@similar.aut_nombre</a>
                                            </h6>
                                            <p class="text-muted mb-0">S/ @similar.aut_precio.ToString("0.00")</p>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="d-grid gap-3 mt-4">
                        <form asp-controller="Catalogo" asp-action="AgregarAlCarrito" method="post">
                            <input type="hidden" name="id" value="@Model.aut_id" />
                            <button class="btn btn-carrito w-100" type="submit">Añadir al Carrito</button>
                        </form>
                        <a href="https://wa.me/51953761813?text=@Uri.EscapeDataString($"Hola, estoy interesado en la autoparte: {Model.aut_nombre} con precio S/ {Model.aut_precio.ToString("0.00")}. ¿Podrían brindarme más información?")" target="_blank" class="btn btn-whatsapp w-100" style="text-decoration: none; display: inline-block; text-align: center;">
                            <i class="fab fa-whatsapp me-2"></i> Consultar por WhatsApp
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function cerrarModal() {
            document.getElementById("modalAutoparte").style.display = "none";
        }

        function agregarFavorito() {
            const toastEl = document.getElementById('toastFavorito');
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        }

        function toggleFavorito() {
        const icon = document.getElementById("iconFavorito");
        icon.classList.toggle("favorito-icon-checked");

        // Aquí puedes agregar lógica para guardar el estado (si es necesario) en el servidor
        // o en el almacenamiento local del navegador, dependiendo de la funcionalidad que desees.
        if (icon.classList.contains("favorito-icon-checked")) {
            // Realiza alguna acción si se marca como favorito (por ejemplo, mostrar un mensaje)
            console.log("Autoparte marcada como favorita.");
        } else {
            // Realiza alguna acción si se desmarca como favorito
            console.log("Autoparte eliminada de favoritos.");
        }
    }

        function cargarDetalleAutoparte(id) {
            fetch(`/Catalogo/DetalleAutoparte/${id}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById("modalContent").innerHTML = html;
                })
                .catch(error => console.error("Error al cargar el detalle de la autoparte:", error));
        }

        // Zoom de imagen
        document.addEventListener("DOMContentLoaded", function () {
            const img = document.getElementById("imgAutoparte");
            let zoomActivo = false;

            img.addEventListener("click", function (e) {
                zoomActivo = !zoomActivo;
                const bounds = img.getBoundingClientRect();
                const x = ((e.clientX - bounds.left) / bounds.width) * 100;
                const y = ((e.clientY - bounds.top) / bounds.height) * 100;

                img.style.transformOrigin = `${x}% ${y}%`;

                if (zoomActivo) {
                    img.classList.add("zoomed");
                } else {
                    img.classList.remove("zoomed");
                    img.style.transformOrigin = "center center";
                }
            });

            img.addEventListener("mousemove", function (e) {
                if (!zoomActivo) return;

                const bounds = img.getBoundingClientRect();
                const x = ((e.clientX - bounds.left) / bounds.width) * 100;
                const y = ((e.clientY - bounds.top) / bounds.height) * 100;

                img.style.transformOrigin = `${x}% ${y}%`;
            });
        });
    </script>
</body>
</html>
