@using System.Text.Json
@inject IHttpContextAccessor HttpContextAccessor

@{
    var carritoJson = HttpContextAccessor.HttpContext.Session.GetString("Carrito");
    var carrito = string.IsNullOrEmpty(carritoJson)
        ? new List<Autoparte>()
        : JsonSerializer.Deserialize<List<Autoparte>>(carritoJson);
}
<style>
    .link-btn {
        display: block;
        padding: 10px;
        border: 1px solid #ffffff;
        border-radius: 5px;
        color: #ffffff;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .link-btn:hover {
            background-color: #E42229;
            color: #ffffff;
            border-color: #E42229;
        }
</style>

<div class="offcanvas offcanvas-end bg-black text-white" tabindex="-1" id="offcanvasCarrito" aria-labelledby="offcanvasCarritoLabel">
    <div class="offcanvas-header border-bottom border-secondary">
        <h5 class="offcanvas-title fw-bold" id="offcanvasCarritoLabel">
            <svg class="bi me-2" width="24" height="24" fill="#E42229">
                <use xlink:href="#cart"></use>
            </svg>
            MI CARRITO
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body d-flex flex-column p-3">
        <!-- Lista de productos -->
        <div class="list-group list-group-flush border-bottom flex-grow-1 overflow-auto mb-3">
            <ul>
                @foreach (var item in carrito)
                {
                    <li>@item.aut_nombre - Cantidad: @item.aut_cantidad</li>
                }
            </ul>
            

        <!-- Resumen -->
        <div class="border-top border-secondary pt-3">
            <div class="d-flex justify-content-between mb-2">
                <span>Subtotal:</span>
                <span class="fw-bold">S/620.50</span>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <span>Envío:</span>
                <span>Calculado al pagar</span>
            </div>

            <div class="d-flex flex-column gap-2 text-center mb-3">
                <a asp-controller="Carrito" asp-action="Index"  class="link-btn">VER CARRITO</a>
                @* <a href="#" class="text-white text-decoration-none" style="padding: 10px; background-color: #E42229; border-radius: 5px;">FINALIZAR COMPRA</a> *@
            </div>

            <div class="text-center mt-3">
                <small class="text-white-50">¿Necesitas ayuda? <a href="#" class="text-decoration-none" style="color: #E42229;">Contáctanos</a></small>
            </div>
        </div>

    </div>
</div>

