    <!-- Solo muestro la parte del JavaScript que necesitas modificar -->
    <script>
        // Funci√≥n para hacer scroll suave hacia los resultados
        function scrollToResults() {
            const resultSection = document.getElementById('resultIntegration');
            const loadingSection = document.getElementById('loadingIndicator');

            // Scroll hacia el loading primero, luego hacia resultados cuando aparezcan
            if (loadingSection.style.display !== 'none') {
                loadingSection.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start',
                    inline: 'nearest'
                });
            }
        }

        // Funci√≥n para scroll hacia resultados finales
        function scrollToFinalResults() {
            const resultSection = document.getElementById('resultIntegration');
            if (resultSection.style.display !== 'none') {
                // Peque√±o delay para asegurar que el contenido se haya renderizado
                setTimeout(() => {
                    resultSection.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start',
                        inline: 'nearest'
                    });
                }, 100);
            }
        }

        // Manejo de drag and drop (mant√©n tu c√≥digo original)
        const uploadDropZone = document.getElementById('uploadDropZone');
        const uploadPlaceholder = document.getElementById('uploadPlaceholder');
        const imagePreview = document.getElementById('imagePreview');
        const removeImageBtn = document.getElementById('removeImageBtn');

        // Eventos de drag and drop (mant√©n tu c√≥digo original)
        uploadDropZone.addEventListener('dragover', function(e) {
            e.preventDefault();
            uploadDropZone.classList.add('dragover');
        });

        uploadDropZone.addEventListener('dragleave', function(e) {
            e.preventDefault();
            uploadDropZone.classList.remove('dragover');
        });

        uploadDropZone.addEventListener('drop', function(e) {
            e.preventDefault();
            uploadDropZone.classList.remove('dragover');

            const files = e.dataTransfer.files;
            if (files.length > 0) {
                const file = files[0];
                if (file.type.startsWith('image/')) {
                    handleImageUpload(file);
                }
            }
        });

        // Previsualizaci√≥n de la imagen (mant√©n tu c√≥digo original)
        document.getElementById("imageUpload").addEventListener("change", function() {
          const fileInput = this;
          if (fileInput.files && fileInput.files[0]) {
            handleImageUpload(fileInput.files[0]);
          }
        });

        function handleImageUpload(file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                imagePreview.src = e.target.result;
                uploadPlaceholder.style.display = 'none';
                imagePreview.style.display = 'block';
                removeImageBtn.style.display = 'flex';
            };
            reader.readAsDataURL(file);
        }

        function removeSelectedImage() {
            document.getElementById('imageUpload').value = '';
            imagePreview.src = '/img/placeholder-image.png';
            imagePreview.style.display = 'none';
            uploadPlaceholder.style.display = 'flex';
            removeImageBtn.style.display = 'none';
        }

        // Limpiar al cerrar el modal (mant√©n tu c√≥digo original)
        function resetModal() {
            removeSelectedImage();
            document.getElementById('commentInput').value = '';
            document.getElementById('loadingIndicator').style.display = 'none';
            document.getElementById('resultIntegration').style.display = 'none';
            document.getElementById('validationAlert').style.display = 'none';
        }

        // Eventos para cerrar el modal (mant√©n tu c√≥digo original)
        document.getElementById('closeModalButton').addEventListener('click', resetModal);
        document.getElementById('exampleModal').addEventListener('hidden.bs.modal', resetModal);
        document.querySelector('.modal-footer .btn').addEventListener('click', resetModal);

        // *** C√ìDIGO MODIFICADO: Env√≠o del formulario con scroll autom√°tico ***
        document.getElementById("btnIntegration").addEventListener("click", function() {
            const fileInput = document.getElementById("imageUpload");
            const commentInput = document.getElementById("commentInput").value.trim();

            // Validaci√≥n: al menos un campo debe estar completo
            if ((!fileInput.files || fileInput.files.length === 0) && commentInput === "") {
                const validationAlert = document.getElementById("validationAlert");
                validationAlert.style.display = "block";

                // Scroll hacia la alerta de validaci√≥n
                validationAlert.scrollIntoView({
                    behavior: 'smooth',
                    block: 'center',
                    inline: 'nearest'
                });

                // Ocultar la alerta despu√©s de 5 segundos
                setTimeout(() => {
                    validationAlert.style.display = "none";
                }, 5000);
                return;
            }

            const formData = new FormData();

            // Agregar imagen si existe
            if (fileInput.files && fileInput.files[0]) {
                formData.append("image", fileInput.files[0]);
            }

            // Agregar comentario si existe
            if (commentInput !== "") {
                formData.append("comment", commentInput);
            }

            // Mostrar loading y hacer scroll hacia √©l
            document.getElementById("loadingIndicator").style.display = "block";
            document.getElementById("resultIntegration").style.display = "none";
            document.getElementById("validationAlert").style.display = "none";

            // *** NUEVO: Scroll autom√°tico hacia la secci√≥n de loading ***
            scrollToResults();

            fetch("/Servicios/AnalyzeContent", {
                method: "POST",
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                document.getElementById("loadingIndicator").style.display = "none";
                document.getElementById("resultIntegration").style.display = "block";

                if (data.success === false) {
                    document.getElementById("resultContent").innerHTML = `<div class="alert alert-danger">${data.result}</div>`;
                } else {
                    document.getElementById("resultContent").innerHTML = data.result;
                    if (data.url) {
                        document.getElementById("resultContent").innerHTML += `
                            <div class="mt-3 text-center">
                                <a href="${data.url}" class="btn mt-2" style="background-color: #E42229; color: #FFFFFF;">Ir al servicio recomendado</a>
                            </div>
                        `;
                    }
                }

                // *** NUEVO: Scroll autom√°tico hacia los resultados finales ***
                scrollToFinalResults();
            })
            .catch(error => {
                document.getElementById("loadingIndicator").style.display = "none";
                document.getElementById("resultIntegration").style.display = "block";
                document.getElementById("resultContent").innerHTML = `<div class="alert alert-danger">Error: ${error.message}</div>`;

                // *** NUEVO: Scroll hacia error tambi√©n ***
                scrollToFinalResults();
            });
        });
    </script>
