<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
    <div class="modal-content">
      <div class="modal-header" style="background-color: #E42229; color: #FFFFFF;">
        <h5 class="modal-title" id="exampleModalLabel">Análisis con Inteligencia Artificial</h5>
      </div>
      <div class="modal-body">
        <div class="container py-4">
          <p class="mb-4">Sube una imagen o escribe un comentario para analizar con IA.</p>

          <div class="row">
            <div class="col-md-6 mb-3 text-center">
              <img src="/img/placeholder-image.png" alt="Imagen a analizar" id="imagePreview" class="img-fluid rounded shadow-sm border" style="max-height: 380px; width: 100%; object-fit: contain; background-color: #f8f9fa;">
              <p class="text-muted small mt-2">Vista previa de la imagen</p>
            </div>

            <div class="col-md-6">
              <form id="analysisForm" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="imageUpload" class="form-label">Seleccionar imagen:</label>
                  <input type="file" class="form-control" id="imageUpload" name="image" accept="image/*">
                </div>
                
                <div class="mb-3">
                  <label for="commentInput" class="form-label">Comentario (opcional):</label>
                  <textarea class="form-control" id="commentInput" name="comment" rows="3" placeholder="Escribe tu comentario aquí..."></textarea>
                </div>

                <button type="button" class="btn w-100 mb-3" id="btnIntegration" style="background-color: #D42025; color: #FFFFFF;">Analizar</button>
              </form>

              <div id="loadingIndicator" class="text-center" style="display:none;">
                <div class="spinner-border" role="status" style="color: #E42229;">
                  <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-2">Analizando con IA...</p>
              </div>

              <div id="resultIntegration" class="card mt-3" style="display:none;">
                <div class="card-header" style="background-color: #626C66; color: #FFFFFF;">
                  <h5 class="mb-0">Resultados del análisis</h5>
                </div>
                <div class="card-body" id="resultContent">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="footerCloseButton" style="background-color: #626C66; color: #FFFFFF;">Cerrar</button>
      </div>
      <script>
        // Previsualización de la imagen
        document.getElementById("imageUpload").addEventListener("change", function() {
          const fileInput = this;
          const imagePreview = document.getElementById("imagePreview");
          
          if (fileInput.files && fileInput.files[0]) {
            const reader = new FileReader();
            
            reader.onload = function(e) {
              imagePreview.src = e.target.result;
            };
            
            reader.readAsDataURL(fileInput.files[0]);
          }
        });

        // Función para resetear el modal
        function resetModal() {
          // Restablece la imagen de vista previa
          document.getElementById('imagePreview').src = '/img/placeholder-image.png';
          
          // Limpia el input de archivo
          const fileInput = document.getElementById('imageUpload');
          fileInput.value = '';
          
          // Limpia el área de comentarios
          document.getElementById('commentInput').value = '';
          
          // Oculta resultados y loading indicator
          document.getElementById('loadingIndicator').style.display = 'none';
          document.getElementById('resultIntegration').style.display = 'none';
          
          // Limpia cualquier referencia al archivo en memoria
          if (fileInput.files && fileInput.files[0]) {
            fileInput.type = 'text';
            fileInput.type = 'file';
          }
        }

        // Eventos para cerrar el modal
        const modalElement = document.getElementById('exampleModal');
        modalElement.addEventListener('hidden.bs.modal', resetModal);
        document.getElementById('closeModalButton').addEventListener('click', resetModal);
        document.getElementById('footerCloseButton').addEventListener('click', resetModal);

        // Envío del formulario
        document.getElementById("btnIntegration").addEventListener("click", function() {
          const fileInput = document.getElementById("imageUpload");
          const commentInput = document.getElementById("commentInput").value.trim();
          
          // Validación: al menos un campo debe estar completo
          if ((!fileInput.files || fileInput.files.length === 0) && commentInput === "") {
            alert("Por favor, completa al menos un campo (imagen o comentario) para realizar el análisis.");
            return;
          }

          const formData = new FormData();
          
          // Agregar imagen si existe
          if (fileInput.files && fileInput.files[0]) {
            formData.append("image", fileInput.files[0]);
          }
          
          // Agregar comentario si existe
          if (commentInput !== "") {
            formData.append("comment", commentInput);
          }

          document.getElementById("loadingIndicator").style.display = "block";
          document.getElementById("resultIntegration").style.display = "none";

          fetch("/Servicios/AnalyzeContent", {
            method: "POST",
            body: formData
          })
          .then(response => {
            if (!response.ok) {
              throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
          })
          .then(data => {
            document.getElementById("loadingIndicator").style.display = "none";
            document.getElementById("resultIntegration").style.display = "block";
            
            if (data.success === false) {
              document.getElementById("resultContent").innerHTML = `<div class="alert alert-danger">${data.result}</div>`;
            } else {
              document.getElementById("resultContent").innerHTML = data.result;
              if (data.url) {
                document.getElementById("resultContent").innerHTML += `
                  <div class="mt-3 text-center">
                    <a href="${data.url}" class="btn mt-2" style="background-color: #E42229; color: #FFFFFF;">Ir al servicio recomendado</a>
                  </div>
                `;
              }
            }
          })
          .catch(error => {
            document.getElementById("loadingIndicator").style.display = "none";
            document.getElementById("resultIntegration").style.display = "block";
            document.getElementById("resultContent").innerHTML = `<div class="alert alert-danger">Error: ${error.message}</div>`;
          });
        });
      </script>
    </div>
  </div>
</div>