@model IEnumerable<Marimon.Models.Servicio>
@{
    ViewBag.Title = "Servicios";
    ViewBag.FullWidthLayout = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<link rel="stylesheet" href="~/css/home.css">
<link rel="stylesheet" href="~/css/servicios.css">
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<style>
    .container {
        padding: 0 !important;
        margin: 0 !important;
        width: 100% !important;
        max-width: 100% !important;
        box-sizing: border-box !important;
    }

    .swiper-button-next,
    .swiper-button-prev {
        width: 50px;
        height: 50px;
        background-color: rgba(0, 0, 0, 0.8);
        color: #fff;
        border-radius: 50%;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        opacity: 0.9;
    }

    /* Arrow positioning - adjust as needed */
    .swiper-button-prev {
        left: 15px;
    }

    .swiper-button-next {
        right: 15px;
    }

    /* Arrow hover effects */
    .swiper-button-next:hover,
    .swiper-button-prev:hover {
        background-color: #e63946;
        /* Your site's red */
        transform: scale(1.1);
        opacity: 1;
        box-shadow: 0 6px 15px rgba(230, 57, 70, 0.4);
    }

    /* Arrow size and appearance */
    .swiper-button-next:after,
    .swiper-button-prev:after {
        font-size: 20px;
        font-weight: bold;
        color: white;
    }



    .swiper-button-next:hover,
    .swiper-button-prev:hover {
        animation: pulse 1.5s infinite;
    }
</style>

<body>
    <div style="padding-top: 20px;"></div>
    <div class="hero-section">
        <div class="container">
            <div class="row hero-row align-items-center">
                <div class="col-md-6 d-flex justify-content-center">
                    <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2Fservicios-marimon-02.jpg?alt=media&amp;token=c82b9eac-83e4-42e6-aae0-814d5cc6bc45.png"
                        alt="Servicios Marimon" class="hero-img" />
                </div>
                <div class="col-md-6 hero-content">
                    <h1 class="hero-title">Hola somos Marimon y<br>traemos las mejores soluciones a sus vehículos
                    </h1>
                    <div class="hero-underline"></div>
                    <h3 class="hero-subtitle" style="color:#fff; font-weight:400; margin-bottom:18px;">
                        Tu tranquilidad es nuestro compromiso: soluciones rápidas, seguras y con la mejor tecnología
                        para tu auto.
                    </h3>
                    <p>Confía en nuestro equipo de expertos para mantener tu vehículo siempre en óptimas condiciones
                        y listo para cualquier reto.</p>
                </div>
            </div>
        </div>
    </div>
    </div>

    <div class="container-xxl py-5">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-lg-8">
                <h2 class="fw-bold" data-aos="fade-up">¿Cuál es nuestro Procedimiento?</h2>
            </div>
        </div>
        <!-- Pasos -->
        <section class="procedimiento-section">
            <div class="container">
                <div class="timeline-container">
                    <div class="timeline-line"></div>

                    <div class="row gy-4 row-cols-1 row-cols-md-2 row-cols-xl-5">
                        <!-- Paso 1 -->
                        <div class="col step-container" data-aos="fade-up" data-aos-delay="100">
                            <div class="step-number">1</div>
                            <div class="step-card">
                                <div class="step-icon">
                                    <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2Fclipboard-image.png?alt=media&token=cd7b240e-1dc3-4b6f-a2f0-b90620001add.png"
                                        alt="Escuchamos" width="80">
                                </div>
                                <h4 class="step-title">Escuchamos y Atendemos</h4>
                                <p class="step-description">
                                    <i class="fas fa-check"></i>
                                    Escuchamos todos los inconvenientes que tienen nuestros clientes frente a su
                                    vehículo.
                                </p>
                            </div>
                        </div>

                        <!-- Paso 2 -->
                        <div class="col step-container" data-aos="fade-up" data-aos-delay="200">
                            <div class="step-number">2</div>
                            <div class="step-card">
                                <div class="step-icon">
                                    <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2Fclipboard-image-1.png?alt=media&token=c164c118-ff0c-433a-80c7-b0b2b2ec666b.png"
                                        alt="Analizamos" width="80">
                                </div>
                                <h4 class="step-title">Analizamos</h4>
                                <p class="step-description">
                                    <i class="fas fa-check"></i>
                                    El asesor asigna a los técnicos especializados de acuerdo a los inconvenientes
                                    presentados
                                    por el cliente.
                                </p>
                            </div>
                        </div>

                        <!-- Paso 3 -->
                        <div class="col step-container" data-aos="fade-up" data-aos-delay="300">
                            <div class="step-number">3</div>
                            <div class="step-card">
                                <div class="step-icon">
                                    <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2Fclipboard-image-2.png?alt=media&token=a8ff5a75-7e15-4031-ada5-751a793d95f2.png"
                                        alt="Cotizamos" width="80">
                                </div>
                                <h4 class="step-title">Cotizamos</h4>
                                <p class="step-description">
                                    <i class="fas fa-check"></i>
                                    De acuerdo a las pruebas realizadas, el asesor realiza la cotización.
                                </p>
                            </div>
                        </div>

                        <!-- Paso 4 -->
                        <div class="col step-container" data-aos="fade-up" data-aos-delay="400">
                            <div class="step-number">4</div>
                            <div class="step-card">
                                <div class="step-icon">
                                    <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2Fclipboard-image-3.png?alt=media&token=ff84c240-0f32-45c1-bb7e-c219e430e687.png"
                                        alt="Seguimiento" width="80">
                                </div>
                                <h4 class="step-title">Seguimiento</h4>
                                <p class="step-description">
                                    <i class="fas fa-check"></i>
                                    Se procede a realizar el trabajo y se establece una fecha límite de entrega.
                                </p>
                            </div>
                        </div>

                        <!-- Paso 5 -->
                        <div class="col step-container" data-aos="fade-up" data-aos-delay="500">
                            <div class="step-number">5</div>
                            <div class="step-card">
                                <div class="step-icon">
                                    <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2Fclipboard-image-4.png?alt=media&token=121b653d-5a08-4ac0-932c-7232fa0da153.png"
                                        alt="Entrega" width="80">
                                </div>
                                <h4 class="step-title">Entrega</h4>
                                <p class="step-description">
                                    <i class="fas fa-check"></i>
                                    Después de realizar las pruebas correspondientes, se entrega el vehículo al
                                    cliente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    </div>

    <div class="slider-bg">
        <h1 class="slider-title">Nuestros Servicios</h1>
        <div class="slider-container2">
            <div class="swiper">
                <div class="swiper-wrapper">
                    @foreach (var servicio in Model)
                    {
                        <div class="swiper-slide">
                            <a asp-controller="Servicios" asp-action="Detalle" asp-route-id="@servicio.ser_id"
                                style="display:block; width:100%; height:100%;">
                                <img src="@servicio.ser_imagen" alt="@servicio.ser_nombre" class="slide-image" />
                                <div class="slide-content">
                                    <div class="slide-title">@servicio.ser_nombre</div>
                                    <div class="slide-underline"></div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
    </div>

    @* <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2Fasdsa.png?alt=media&token=fd6bcbec-8bdf-4971-bde3-52be968274e1"
        style="float:right; width: 100%; height: 100%;"> *@

</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        AOS.init({ once: true });
    });
    var totalSlides = @Model.Count();
    var swiper = new Swiper('.swiper', {
        loop: true,
        centeredSlides: true,
        slidesPerView: 1,
        spaceBetween: 8,
        speed: 900,
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        autoplay: {
            delay: 15000,
            disableOnInteraction: false
        },
        breakpoints: {
            0: { slidesPerView: 1, spaceBetween: 8, centeredSlides: true },
            600: { slidesPerView: 2, spaceBetween: 12, centeredSlides: false },
            992: { slidesPerView: 3, spaceBetween: 20, centeredSlides: false },
            1200: { slidesPerView: 4, spaceBetween: 30, centeredSlides: false }
        }
    });
</script>