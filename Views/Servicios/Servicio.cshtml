@{
    ViewBag.Title = "Servicios";
    ViewBag.FullWidthLayout = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .full-width-banner {
        width: 100vw;
        overflow: hidden;
        position: relative;
        margin-left: calc(-50vw + 50%);
        margin-top: 0;
    }

    .full-width-banner img {
        width: 100%;
        height: auto;
        display: block;
        filter: brightness(70%);
    }

    .banner-text {
        position: absolute;
        top: 40%;
        left: 10%;
        color: white;
    }

    .form-label {
        font-weight: 600;
    }

    .contact-section p {
        margin-bottom: 0.5rem;
    }

    .contact-section strong {
        display: block;
        margin-bottom: 0.3rem;
    }
</style>

<!-- Banner Superior -->
<div class="full-width-banner">
    <img src="https://www.foxwelldiag.com/cdn/shop/articles/10_debbfc55-4bf4-4238-8372-35cad9cc6181.jpg?v=1718870602&width=2048"
        alt="Banner Scanner" />
    <div class="banner-text">
        <h4 class="text-uppercase">TALLER ESPECIALIZADO EN</h4>
        <h2 class="fw-bold">Vehículos Europeos y Americanos</h2>
        <a href="#formulario" class="btn btn-danger mt-3">INSPECCIONAR</a>
    </div>
</div>

<!-- Contenido -->
<div class="container-fluid mt-4 px-4"> <!-- Usamos container-fluid + padding lateral opcional -->

    <!-- Sección de Título -->
    <h2 class="text-center bg-dark text-white py-5">Servicio de Diagnóstico y Scanner</h2>

    <!-- Imagen y descripción -->
    <div class="row my-5 align-items-center">
        <div class="col-md-6 text-center">
            <img src="https://images.ctfassets.net/gs0ws48zcft1/5Zs0uT2EM3NsOWikYDRDHB/71e1660c98ebb476c149625efd1ee4d3/imagen-compuesta-interfaz-ingenieria.jpg"
                alt="Servicio Scanner" class="img-fluid rounded shadow" style="max-height: 350px;" />
        </div>
        <div class="col-md-6">
            <h5><strong>Diagnóstico y Scanner</strong></h5>
            <p class="text-muted">"Lorem ipsum dolor sit amet, consectetur adipiscing elit. <br />
                Sed do eiusmod tempor incididunt ut labore et dolore."</p>
        </div>
    </div>

    <hr />

    <!-- Sección de Reserva -->
    <div class="row align-items-center my-5">
        <!-- Imagen a la izquierda -->
        <div class="col-md-6 text-center">
            <img src="https://www.foxwelldiag.com/cdn/shop/articles/10_debbfc55-4bf4-4238-8372-35cad9cc6181.jpg?v=1718870602&width=2048"
                alt="Reserva tu Servicio" class="img-fluid rounded shadow" style="max-height: 300px;" />
        </div>

        <!-- Formulario a la derecha -->
        <div class="col-md-6">
            <h4 class="text-center mb-4">Reserva tu Servicio</h4>
            <form class="row g-3" id="formulario">
                <div class="col-md-6">
                    <label for="nombre" class="form-label">Nombre*</label>
                    <input type="text" class="form-control" id="nombre" placeholder="Tu nombre" required>
                </div>
                <div class="col-md-6">
                    <label for="apellido" class="form-label">Apellido*</label>
                    <input type="text" class="form-control" id="apellido" placeholder="Tu apellido" required>
                </div>
                <div class="col-md-6">
                    <label for="placa" class="form-label">Placa*</label>
                    <input type="text" class="form-control" id="placa" placeholder="ABC123" required>
                </div>
                <div class="col-md-6">
                    <label for="telefono" class="form-label">Número de Teléfono*</label>
                    <input type="tel" class="form-control" id="telefono" placeholder="+51 900000000" required>
                </div>
                <div class="col-md-6">
                    <label for="fecha" class="form-label">Fecha*</label>
                    <input type="date" class="form-control" id="fecha" required>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-danger w-100">RESERVAR CITA</button>
                </div>
            </form>
        </div>
    </div>

