@model Marimon.Models.Servicio
@{
    ViewBag.Title = "Servicios";
    ViewBag.FullWidthLayout = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container {
        padding: 0 !important;
        margin: 0 !important;
        width: 100% !important;
        max-width: 100% !important;
        box-sizing: border-box !important;
    }

    .bg-black {
        background-color: #000 !important;
    }

    .btn {
        display: none;
    }

    .banner-text {
        position: absolute;
        top: 50%;
        left: 40px;
        transform: translateY(-50%);
    }
</style>

<!-- Banner Superior -->
<div class="container-fluid full-width-banner p-0 position-relative">
    <img src="https://www.foxwelldiag.com/cdn/shop/articles/10_debbfc55-4bf4-4238-8372-35cad9cc6181.jpg?v=1718870602&width=2048"
        alt="Banner Scanner" class="img-fluid w-100" />
    <div class="banner-text position-absolute top-10 start-0 ps-5 text-white">
        <h4 class="text-uppercase fw-bold fs-7">TALLER ESPECIALIZADO EN</h4>
        <h2 class="fw-bold fs-5">Vehículos Europeos y Americanos</h2>
    </div>
</div>


<!-- Contenido -->
<!-- Sección de Título -->
<div class="container-fluid p-0 m-0 pt-3">
    <h2 class="text-center text-white py-5 w-100 bg-black">
        @Model.ser_nombre
    </h2>
</div>

<div class="container-fluid mt-4 px-4">

    <!-- Imagen y descripción -->
    <div class="row my-5 align-items-center">
        <div class="col-md-6 text-center">
            <img src="@Model.ser_imagen"
                alt="Servicio Scanner" class="img-fluid rounded shadow" style="max-height: 350px;" />
        </div>
        <div class="col-md-6">
            <h5><strong>@Model.ser_nombre</strong></h5>
            <p class="text-muted">@Model.ser_descripcion</p>
        </div>
    </div>

    <hr />

    <!-- Sección de Reserva -->
    <div class="container my-5">
        <div class="row align-items-center">
            <!-- Imagen a la izquierda -->
            <div class="col-lg-6 col-md-12 text-center mb-4 mb-lg-0">
                <img src="https://www.foxwelldiag.com/cdn/shop/articles/10_debbfc55-4bf4-4238-8372-35cad9cc6181.jpg?v=1718870602&width=2048"
                    alt="Reserva tu Servicio" class="img-fluid rounded shadow" />
            </div>

            <!-- Formulario a la derecha -->
            <div class="col-lg-6 col-md-12">
                <h4 class="text-center mb-4">Reserva tu Servicio</h4>
                <form class="row g-3" id="formulario">
                    <div class="col-sm-6">
                        <label for="nombre" class="form-label">Nombre*</label>
                        <input type="text" class="form-control" id="nombre" placeholder="Tu nombre" required>
                    </div>
                    <div class="col-sm-6">
                        <label for="apellido" class="form-label">Apellido*</label>
                        <input type="text" class="form-control" id="apellido" placeholder="Tu apellido" required>
                    </div>
                    <div class="col-sm-6">
                        <label for="placa" class="form-label">Placa*</label>
                        <input type="text" class="form-control" id="placa" placeholder="ABC123" required>
                    </div>
                    <div class="col-sm-6">
                        <label for="telefono" class="form-label">Número de Teléfono*</label>
                        <input type="tel" class="form-control" id="telefono" placeholder="+51 900000000" required>
                    </div>
                    <div class="col-sm-6">
                        <label for="fecha" class="form-label">Fecha*</label>
                        <input type="date" class="form-control" id="fecha" required>
                    </div>
                    <div class="col-sm-6 d-flex align-items-end ">
                        <button type="submit" class="btn2 btn-danger w-100 btn-lg">RESERVAR CITA</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>