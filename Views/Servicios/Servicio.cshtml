@model Marimon.Models.Servicio
@{
    ViewBag.Title = "Servicios";
    ViewBag.FullWidthLayout = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<style>
    .container {
        padding: 0 !important;
        margin: 0 !important;
        width: 100% !important;
        max-width: 100% !important;
        box-sizing: border-box !important;
    }

    .bg-black {
        background-color: #000 !important;
    }

    .banner-text {
        position: absolute;
        top: 50%;
        left: 40px;
        transform: translateY(-50%);
    }
</style>

<!-- Banner Superior -->
<div class="container-fluid full-width-banner p-0 position-relative" style="height: 320px; overflow: hidden;">
    <img src="https://www.foxwelldiag.com/cdn/shop/articles/10_debbfc55-4bf4-4238-8372-35cad9cc6181.jpg?v=1718870602&width=2048"
        alt="Banner Scanner" class="img-fluid w-100 h-100" style="object-fit: cover; filter: brightness(0.6);" />
    <div class="banner-text position-absolute top-50 start-50 translate-middle text-center text-white"
        data-aos="fade-down">
        <h4 class="text-uppercase fw-bold fs-7 mb-2" style="letter-spacing:2px;">TALLER ESPECIALIZADO EN</h4>
        <h2 class="fw-bold fs-2">Vehículos Europeos y Americanos</h2>
    </div>
</div>


<!-- Contenido -->
<!-- Sección de Título -->
<div class="container-fluid p-0 m-0 pt-3">
    <div class="text-center py-5 w-100 bg-black" data-aos="fade-up">
        <h2 class="text-white mb-3">@Model.ser_nombre</h2>
        <div style="width:60px;height:4px;background:#D42025;margin:0 auto 0 auto;border-radius:2px;"></div>
    </div>
</div>

<div class="container-fluid mt-4 px-4">

    <!-- Imagen y descripción -->
    <div class="container-fluid mt-4 px-4">
        <div class="row my-5 align-items-center">
            <div class="col-md-6 text-center" data-aos="fade-right">
                <img src="@Model.ser_imagen" alt="Servicio Scanner" class="img-fluid rounded shadow"
                    style="max-height: 350px;" />
            </div>
            <div class="col-md-6" data-aos="fade-left">
                <h5 class="fw-bold">@Model.ser_nombre</h5>
                <p class="text-muted">@Model.ser_descripcion</p>
            </div>
        </div>

        <hr />

        <!-- Sección de Reserva -->
        <div class="container my-5">
            <div class="row align-items-center">
                <div class="container my-5">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-12 text-center mb-4 mb-lg-0" data-aos="zoom-in">
                            <img src="https://www.foxwelldiag.com/cdn/shop/articles/10_debbfc55-4bf4-4238-8372-35cad9cc6181.jpg?v=1718870602&width=2048"
                                alt="Reserva tu Servicio" class="img-fluid rounded shadow" />
                        </div>
                        <div class="col-lg-6 col-md-12" data-aos="fade-up">
                            <div class="p-4 rounded-4 shadow-lg bg-white">
                                <h4 class="text-center mb-4 text-danger">Reserva tu Servicio</h4>
                                <form class="row g-3" id="formulario">
                                    <div class="col-sm-6">
                                        <label for="nombre" class="form-label">Nombre*</label>
                                        <input type="text" class="form-control" id="nombre" placeholder="Tu nombre"
                                            value="@ViewBag.Nombre" required readonly>
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="apellido" class="form-label">Apellido*</label>
                                        <input type="text" class="form-control" id="apellido" placeholder="Tu apellido"
                                            value="@ViewBag.Apellido" required readonly>
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="placa" class="form-label">Placa*</label>
                                        <input type="text" class="form-control" id="placa" placeholder="ABC123"
                                            required>
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="telefono" class="form-label">Número de Teléfono*</label>
                                        <input type="tel" class="form-control" id="telefono" placeholder="+51 900000000"
                                            required>
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="fecha" class="form-label">Fecha*</label>
                                        <input type="date" class="form-control" id="fecha" required>
                                    </div>
                                    <div class="col-sm-6 d-flex align-items-end ">
                                        <button type="submit" class="btn btn-danger w-100 btn-lg"
                                            style="background:#D42025;border:none;">
                                            <i class="fa fa-calendar-check-o me-2"></i>RESERVAR CITA
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    AOS.init({ once: true });
</script>