@model Marimon.Models.Oferta

@{
    Layout = "_LayoutVentas";
    ViewData["Title"] = "Editar Oferta";
}

<link rel="stylesheet" href="~/css/ofertas.css" asp-append-version="true" />

<ol class="breadcrumb m-0 py-2">
    <li class="breadcrumb-item">
        <a asp-area="" asp-controller="Personal_Ventas" asp-action="Index">Modulo de Autopartes</a>
    </li>
    <li class="breadcrumb-item">
        <a asp-area="" asp-controller="Ofertas" asp-action="Index">Ofertas</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Editar Oferta</li>
</ol>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Editar Oferta para: @Model.Autoparte.aut_nombre</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditarOfertaForm" method="post">
                        <input type="hidden" name="id" value="@Model.ofe_id" />
                        
                        <div class="mb-3">
                            <label for="descripcionOferta" class="form-label">Descripci√≥n de la oferta</label>
                            <input type="text" class="form-control" id="descripcionOferta" name="ofe_descripcion" value="@Model.ofe_descripcion" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="porcentajeBatch" class="form-label">Porcentaje de descuento (%)</label>
                            <input type="number" class="form-control" id="porcentajeBatch" name="ofe_porcentaje" min="1" max="99" step="0.01" value="@Model.ofe_porcentaje" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="fechaInicioBatch" class="form-label">Fecha de inicio</label>
                            <input type="date" class="form-control" id="fechaInicioBatch" name="ofe_fecha_inicio" value="@Model.ofe_fecha_inicio.ToString("yyyy-MM-dd")" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="fechaFinBatch" class="form-label">Fecha de fin</label>
                            <input type="date" class="form-control" id="fechaFinBatch" name="ofe_fecha_fin" value="@Model.ofe_fecha_fin.ToString("yyyy-MM-dd")" required>
                        </div>

                        <div class="text-center mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary ms-2">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>