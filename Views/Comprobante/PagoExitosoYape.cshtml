@model Marimon.Models.Comprobante
@{
    ViewData["Title"] = "Pago Exitoso";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/graciasStipe.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Estilos para la encuesta de satisfacci√≥n */
        .btn-survey {
            background: linear-gradient(135deg, #626C66, #4a554f);
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin: 0 0.5rem;
        }

        .btn-survey:hover {
            background: linear-gradient(135deg, #4a554f, #3a453f);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(98, 108, 102, 0.3);
            color: white;
            text-decoration: none;
        }

        .btn-survey i {
            margin-right: 0.5rem;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        /* Modal styles */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            padding: 20px;
            box-sizing: border-box;
        }

        .modal-overlay.show {
            display: flex;
        }

        .modal-content {
            background: white;
            border-radius: 12px;
            max-width: 600px;
            width: 100%;
            max-height: 90vh;
            overflow-y: auto;
            position: relative;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .modal-header {
            padding: 1.5rem 2rem 1rem 2rem;
            border-bottom: 1px solid #e9ecef;
            position: sticky;
            top: 0;
            background: white;
            border-radius: 12px 12px 0 0;
            z-index: 1;
        }

        .modal-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #333;
            margin: 0;
            text-align: center;
        }

        .modal-close {
            position: absolute;
            top: 1rem;
            right: 1.5rem;
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: #666;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .modal-close:hover {
            background: #f0f0f0;
            color: #333;
        }

        .modal-body {
            padding: 1.5rem 2rem 2rem 2rem;
        }

        .survey-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-top: 2rem;
            border: 1px solid #e9ecef;
        }

        .survey-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #333;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .survey-form {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #E42229;
            box-shadow: 0 0 0 3px rgba(228, 34, 41, 0.1);
        }

        .satisfaction-rating {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            margin-bottom: 1rem;
        }

        .rating-option {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: white;
        }

        .rating-option:hover {
            border-color: #E42229;
            background-color: #fef7f7;
        }

        .rating-option.selected {
            border-color: #E42229;
            background-color: #E42229;
            color: white;
        }

        .rating-option input[type="radio"] {
            margin-right: 0.75rem;
            transform: scale(1.2);
        }

        .rating-emoji {
            font-size: 1.5rem;
            margin-left: auto;
        }

        .question-group {
            margin-bottom: 1.5rem;
        }

        .question-text {
            font-weight: 600;
            color: #333;
            margin-bottom: 1rem;
        }

        .yes-no-options {
            display: flex;
            gap: 1rem;
        }

        .yes-no-option {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.75rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: white;
            font-weight: 600;
        }

        .yes-no-option:hover {
            border-color: #E42229;
            background-color: #fef7f7;
        }

        .yes-no-option.selected {
            border-color: #E42229;
            background-color: #E42229;
            color: white;
        }

        .yes-no-option input[type="radio"] {
            margin-right: 0.5rem;
        }

        .comment-area {
            width: 100%;
            min-height: 100px;
            padding: 0.75rem 1rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
            font-family: inherit;
            resize: vertical;
            transition: border-color 0.3s ease;
        }

        .comment-area:focus {
            outline: none;
            border-color: #E42229;
            box-shadow: 0 0 0 3px rgba(228, 34, 41, 0.1);
        }

        .submit-survey-btn {
            background: linear-gradient(135deg, #E42229, #D42025);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 1rem;
        }

        .submit-survey-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(228, 34, 41, 0.3);
        }

        .survey-thank-you {
            text-align: center;
            padding: 2rem;
            background: #f8f9fa;
            border-radius: 8px;
            margin-top: 1rem;
            display: none;
        }

        .survey-thank-you.show {
            display: block;
        }

        .progress-container {
            margin-bottom: 2rem;
            background: #f5f5f5;
            border-radius: 10px;
            height: 12px;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, #E42229, #ff6b6b);
            width: 33.33%;
            transition: width 0.4s ease;
        }

        .progress-labels {
            text-align: right;
            font-size: 0.9rem;
            color: #777;
            margin-top: 0.3rem;
        }

        .required {
            color: #E42229;
        }

        .nps-scale {
            margin: 1.5rem 0;
        }

        .nps-labels {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            color: #666;
        }

        .nps-options {
            display: flex;
            justify-content: space-between;
        }

        .nps-option {
            display: flex;
            flex-direction: column;
            align-items: center;
            cursor: pointer;
        }

        .nps-option input {
            display: none;
        }

        .nps-option span {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 2.5rem;
            height: 2.5rem;
            border: 2px solid #e9ecef;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .nps-option input:checked+span {
            background: #E42229;
            color: white;
            border-color: #E42229;
        }

        .nps-option.selected span {
            background: #E42229 !important;
            color: white !important;
            border-color: #E42229 !important;
        }

        .rating-option.selected {
            border-color: #E42229 !important;
            background-color: #E42229 !important;
            color: white !important;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 1.5rem;
        }

        .btn-prev,
        .btn-next {
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-prev {
            background: #f5f5f5;
            color: #333;
            border: 1px solid #ddd;
        }

        .btn-next {
            background: #626C66;
            color: white;
            border: none;
        }

        .discount-offer {
            background: #f9f9f9;
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1.5rem;
        }

        .discount-code {
            font-size: 1.8rem;
            font-weight: bold;
            color: #E42229;
            background: #fff;
            padding: 0.8rem;
            border: 2px dashed #E42229;
            border-radius: 8px;
            margin: 1rem 0;
            text-align: center;
            letter-spacing: 2px;
        }

        .discount-note {
            font-size: 0.9rem;
            color: #666;
            text-align: center;
        }

        .form-input.invalid {
            border-color: #dc3545 !important;
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1) !important;
        }

        .form-group.invalid-group {
            border-left: 4px solid #dc3545;
            padding-left: 15px;
            background-color: #fff5f5;
        }
    </style>
</head>

<body>
    <div class="container success-container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="success-card" style="position: relative;">
                    <div class="success-badge">
                        <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2Fadasdscarro.png?alt=media&token=0634f7cd-cb65-4e33-99a0-be780f19ecda"
                            alt="Auto" style="height: 50px; width: auto;" />
                    </div>

                    <div class="success-icon"
                        style="margin: 0 auto 1.2rem auto; display: flex; justify-content: center;">
                        <i class="fas fa-check-circle"></i>
                        <div class="success-rings">
                            <div class="ring ring1"></div>
                            <div class="ring ring2"></div>
                            <div class="ring ring3"></div>
                        </div>
                    </div>

                    <h1 class="success-title">¬°Pago Completado con √âxito!</h1>

                    <div class="success-message">
                        <p>Hemos recibido tu comprobante de pago.</p>
                        <p>En breve, nuestro equipo validar√° la transacci√≥n y te notificaremos por correo electr√≥nico.
                        </p>
                        <p>Gracias por confiar en Marimon Autopartes.</p>
                    </div>

                    <div class="receipt-info">
                        <div class="receipt-row">
                            <span class="receipt-label">N√∫mero de Comprobante:</span>
                            <span class="receipt-value boleta">
                                @(!string.IsNullOrEmpty(Model.com_evidencia) ?
                                                                System.IO.Path.GetFileNameWithoutExtension(Model.com_evidencia).Replace("evidencias_",
                                                                "") :
                                                                Model.com_id.ToString())
                            </span>
                        </div>
                        <div class="receipt-divider"></div>
                        <div class="receipt-message">
                            <i class="fas fa-envelope"></i>
                            <p>Te avisaremos por correo cuando tu pago sea validado y tu compra est√© lista.</p>
                        </div>
                    </div>

                    <div class="action-buttons mt-4">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-store">
                            <i class="fas fa-store"></i>
                            <span>Volver a la Tienda</span>
                        </a>
                        <button type="button" class="btn btn-survey" id="openSurveyModal">
                            <i class="fas fa-star"></i>
                            <span>Encuesta de Satisfacci√≥n</span>
                        </button>
                        <a asp-area="Identity" asp-page="/Account/Manage/Pedidos" class="btn btn-outline-secondary">
                            <i class="fas fa-list-alt mr-1"></i>
                            <span>Mis Pedidos</span>
                        </a>
                    </div>

                    <div class="success-footer mt-4">
                        <div class="badge-row">
                            <span class="custom-badge">
                                <i class="fas fa-shield-alt"></i> Compra Segura
                            </span>
                            <span class="custom-badge">
                                <i class="fas fa-medal"></i> Calidad Garantizada
                            </span>
                            <span class="custom-badge">
                                <i class="fas fa-thumbs-up"></i> Servicio Confiable
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Encuesta de Satisfacci√≥n -->
    <div class="modal-overlay" id="surveyModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Encuesta de Satisfacci√≥n</h2>
                <button type="button" class="modal-close" id="closeSurveyModal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <!-- Encuesta de Satisfacci√≥n -->
                <div class="survey-container">
                    <!-- Barra de progreso -->
                    <div class="progress-container">
                        <div class="progress-bar" id="surveyProgress" style="width: 33.33%;"></div>
                        <div class="progress-labels">
                            <span>Paso <span id="currentStep">1</span> de <span id="totalSteps">3</span></span>
                        </div>
                    </div>

                    <form class="survey-form" id="satisfactionSurvey">
                        <!-- Paso 1: Informaci√≥n personal -->
                        <div class="survey-step" id="step1">
                            <div class="form-group">
                                <label class="form-label">Nombre: <span class="required">*</span></label>
                                <input type="text" class="form-input" name="nombre" placeholder="Ingresa tu nombre"
                                    required value="@(User.Identity.IsAuthenticated? User.Identity.Name : "")">
                            </div>

                            <div class="form-group">
                                <label class="form-label">Correo Electr√≥nico: <span class="required">*</span></label>
                                <input type="email" class="form-input" name="correo"
                                    placeholder="Ingresa tu correo electr√≥nico" required
                                    value="@(ViewBag.UserEmail ?? "")">
                            </div>

                            <div class="form-actions">
                                <div></div> <!-- Espacio vac√≠o para alinear el bot√≥n a la derecha -->
                                <button type="button" class="btn-next">Siguiente <i
                                        class="fas fa-chevron-right"></i></button>
                            </div>
                        </div>

                        <!-- Paso 2: Experiencia con el sistema -->
                        <div class="survey-step" id="step2" style="display: none;">
                            <div class="form-group">
                                <label class="form-label">¬øCu√°l fue su nivel de satisfacci√≥n con el sistema de pago
                                    Yape?
                                    <span class="required">*</span></label>
                                <div class="satisfaction-rating">
                                    <label class="rating-option">
                                        <input type="radio" name="agrado_sistema" value="excelente" required>
                                        <span>Excelente</span>
                                        <span class="rating-emoji">üòä</span>
                                    </label>
                                    <label class="rating-option">
                                        <input type="radio" name="agrado_sistema" value="bueno">
                                        <span>Bueno</span>
                                        <span class="rating-emoji">üôÇ</span>
                                    </label>
                                    <label class="rating-option">
                                        <input type="radio" name="agrado_sistema" value="normal">
                                        <span>Normal</span>
                                        <span class="rating-emoji">üòê</span>
                                    </label>
                                    <label class="rating-option">
                                        <input type="radio" name="agrado_sistema" value="malo">
                                        <span>Malo</span>
                                        <span class="rating-emoji">üòû</span>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">¬øQu√© tan f√°cil fue completar su pago usando Yape? <span
                                        class="required">*</span></label>
                                <div class="satisfaction-rating">
                                    <label class="rating-option">
                                        <input type="radio" name="facilidad_yape" value="muy_facil" required>
                                        <span>Muy f√°cil</span>
                                        <span class="rating-emoji">üòä</span>
                                    </label>
                                    <label class="rating-option">
                                        <input type="radio" name="facilidad_yape" value="facil">
                                        <span>F√°cil</span>
                                        <span class="rating-emoji">üôÇ</span>
                                    </label>
                                    <label class="rating-option">
                                        <input type="radio" name="facilidad_yape" value="normal">
                                        <span>Regular</span>
                                        <span class="rating-emoji">üòê</span>
                                    </label>
                                    <label class="rating-option">
                                        <input type="radio" name="facilidad_yape" value="dificil">
                                        <span>Dif√≠cil</span>
                                        <span class="rating-emoji">üòû</span>
                                    </label>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="button" class="btn-prev"><i class="fas fa-chevron-left"></i>
                                    Anterior</button>
                                <button type="button" class="btn-next">Siguiente <i
                                        class="fas fa-chevron-right"></i></button>
                            </div>
                        </div>

                        <!-- Paso 3: Recomendaci√≥n y comentarios -->
                        <div class="survey-step" id="step3" style="display: none;">
                            <div class="form-group">
                                <label class="form-label">¬øQu√© tan probable es que recomiende nuestro servicio a un
                                    amigo o
                                    colega? <span class="required">*</span></label>
                                <div class="nps-scale">
                                    <div class="nps-labels">
                                        <span>Poco probable</span>
                                        <span>Muy probable</span>
                                    </div>
                                    <div class="nps-options">
                                        @for (int i = 0; i <= 10; i++)
                                        {
                                            <label class="nps-option">
                                                <input type="radio" name="nps_score" value="@i" required>
                                                <span>@i</span>
                                            </label>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">¬øTiene alguna sugerencia para mejorar nuestra plataforma de
                                    pagos?</label>
                                <textarea class="comment-area" name="sugerencias"
                                    placeholder="Sus comentarios nos ayudan a mejorar continuamente..."></textarea>
                            </div>

                            <div class="form-actions">
                                <button type="button" class="btn-prev"><i class="fas fa-chevron-left"></i>
                                    Anterior</button>
                                <button type="submit" class="submit-survey-btn">
                                    <i class="fas fa-paper-plane mr-2"></i>
                                    Enviar Encuesta
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="survey-thank-you" id="surveyThankYou">
                        <i class="fas fa-heart" style="font-size: 2rem; color: #E42229; margin-bottom: 1rem;"></i>
                        <h3 style="color: #333; margin-bottom: 0.5rem;">¬°Gracias por tu opini√≥n!</h3>
                        <p style="color: #666;">Tu feedback es muy valioso y nos ayuda a mejorar nuestros servicios.</p>
                        <div class="discount-offer">
                            <p style="font-weight: bold; margin-top: 1rem;">Como agradecimiento, aqu√≠ tienes un c√≥digo
                                de
                                descuento para tu pr√≥xima compra:</p>
                            <div class="discount-code">GRACIAS10</div>
                            <p class="discount-note">10% de descuento en tu pr√≥xima compra</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
    <script>
        $(document).ready(function () {
            console.log('=== DOCUMENTO LISTO ===');

            $(".success-card").hide().fadeIn(800);

            setTimeout(function () {
                $(".ring").addClass("animate");
            }, 300);

            setTimeout(function () {
                confetti({
                    particleCount: 150,
                    spread: 80,
                    origin: { y: 0.6 },
                    colors: ['#E42229', '#D42025', '#626C66', '#ffda3a'],
                    disableForReducedMotion: true
                });

                setTimeout(function () {
                    confetti({
                        particleCount: 50,
                        angle: 120,
                        spread: 55,
                        origin: { x: 0, y: 0.6 },
                        colors: ['#E42229', '#ffda3a'],
                    });

                    confetti({
                        particleCount: 50,
                        angle: 60,
                        spread: 55,
                        origin: { x: 1, y: 0.6 },
                        colors: ['#D42025', '#626C66'],
                    });
                }, 700);
            }, 500);

            $(".btn").hover(
                function () {
                    $(this).css({
                        "transform": "translateY(-2px)",
                        "box-shadow": "0 4px 8px rgba(0,0,0,0.1)"
                    });
                },
                function () {
                    $(this).css({
                        "transform": "translateY(0)",
                        "box-shadow": "none"
                    });
                }
            );

            $(".custom-badge").hover(
                function () {
                    $(this).css({
                        "background-color": "#f0f0f0",
                        "transform": "scale(1.05)"
                    });
                },
                function () {
                    $(this).css({
                        "background-color": "#f8f8f8",
                        "transform": "scale(1)"
                    });
                }
            );

            // Funcionalidad del modal
            $('#openSurveyModal').click(function () {
                console.log('=== ABRIENDO MODAL ===');
                $('#surveyModal').addClass('show');
                $('body').css('overflow', 'hidden');

                // Resetear la encuesta al paso 1
                $('.survey-step').hide();
                $('#step1').show();
                $('#currentStep').text('1');
                $('#surveyProgress').css('width', '33.33%');

                // Limpiar validaciones anteriores
                $('.form-group').css({
                    'border-left': 'none',
                    'padding-left': '0',
                    'background-color': 'transparent'
                });

                $('input, textarea').css({
                    'border-color': '#e9ecef',
                    'box-shadow': 'none'
                });
            });

            $('#closeSurveyModal, .modal-overlay').click(function (e) {
                if (e.target === this) {
                    $('#surveyModal').removeClass('show');
                    $('body').css('overflow', 'auto');
                }
            });

            $('.modal-content').click(function (e) {
                e.stopPropagation();
            });

            $(document).keydown(function (e) {
                if (e.key === 'Escape') {
                    $('#surveyModal').removeClass('show');
                    $('body').css('overflow', 'auto');
                }
            });

            // Event handlers para rating y NPS
            $(document).on('click', '.rating-option', function () {
                console.log('=== CLICK EN RATING OPTION ===');
                var groupName = $(this).find('input[type="radio"]').attr('name');
                console.log('Grupo:', groupName);
                $('input[name="' + groupName + '"]').closest('.rating-option').removeClass('selected');
                $(this).addClass('selected');
                $(this).find('input[type="radio"]').prop('checked', true);
            });

            $(document).on('click', '.nps-option', function () {
                console.log('=== CLICK EN NPS OPTION ===');
                $('.nps-option').removeClass('selected');
                $(this).addClass('selected');
                $(this).find('input[type="radio"]').prop('checked', true);
            });

            $(document).on('click', '.btn-next', function (e) {
                console.log('=== CLICK EN BOT√ìN SIGUIENTE ===');
                e.preventDefault();
                e.stopPropagation();

                // Encontrar el paso actual de manera m√°s robusta
                var currentStepElement = $('.survey-step:visible');
                console.log('Pasos visibles:', currentStepElement.length);

                if (currentStepElement.length === 0) {
                    console.error('No hay pasos visibles');
                    return;
                }

                var stepId = currentStepElement.first().attr('id');
                var currentStep = parseInt(stepId.replace('step', ''));

                console.log('Paso actual determinado:', currentStep);

                if (currentStep && currentStep < 3) {
                    nextStep(currentStep);
                }
            });

            $(document).on('click', '.btn-prev', function (e) {
                console.log('=== CLICK EN BOT√ìN ANTERIOR ===');
                e.preventDefault();
                e.stopPropagation();

                var currentStepElement = $('.survey-step:visible');
                var stepId = currentStepElement.first().attr('id');
                var currentStep = parseInt(stepId.replace('step', ''));

                if (currentStep && currentStep > 1) {
                    prevStep(currentStep);
                }
            });

            $('#satisfactionSurvey').submit(function (e) {
                e.preventDefault();
                console.log('=== ENVIANDO FORMULARIO ===');

                var formData = {
                    nombre: $('input[name="nombre"]').val(),
                    correo: $('input[name="correo"]').val(),
                    agrado_sistema: $('input[name="agrado_sistema"]:checked').val(),
                    facilidad_yape: $('input[name="facilidad_yape"]:checked').val(),
                    nps_score: $('input[name="nps_score"]:checked').val(),
                    sugerencias: $('textarea[name="sugerencias"]').val()
                };

                console.log('Datos de la encuesta:', formData);

                $('.survey-form').hide();
                $('#surveyThankYou').addClass('show');

                setTimeout(function () {
                    $('#surveyModal').removeClass('show');
                    $('body').css('overflow', 'auto');

                    setTimeout(function () {
                        $('.survey-form').show();
                        $('#surveyThankYou').removeClass('show');
                        $('#satisfactionSurvey')[0].reset();
                        $('.rating-option, .nps-option').removeClass('selected');
                        // Resetear a step 1
                        $('.survey-step').hide();
                        $('#step1').show();
                        $('#currentStep').text('1');
                        $('#surveyProgress').css('width', '33.33%');
                    }, 500);
                }, 3000);
            });
        });

        // FUNCIONES DE NAVEGACI√ìN
        function nextStep(currentStep) {
            console.log('=== EJECUTANDO NEXTSTEP ===');
            console.log('Paso actual:', currentStep);

            const currentStepDiv = document.getElementById(`step${currentStep}`);

            if (!currentStepDiv) {
                console.error('No se encontr√≥ el elemento del paso:', `step${currentStep}`);
                return false;
            }

            let isValid = true;

            // Validar campos requeridos del paso actual
            const requiredInputs = currentStepDiv.querySelectorAll('input[required], textarea[required]');

            requiredInputs.forEach(input => {
                if (input.type === 'radio') {
                    const radioGroup = currentStepDiv.querySelectorAll(`input[name="${input.name}"]`);
                    const isChecked = Array.from(radioGroup).some(radio => radio.checked);

                    if (!isChecked) {
                        isValid = false;
                        const formGroup = input.closest('.form-group');
                        if (formGroup) {
                            formGroup.style.borderLeft = '4px solid #dc3545';
                            formGroup.style.paddingLeft = '15px';
                            formGroup.style.backgroundColor = '#fff5f5';
                        }
                    } else {
                        const formGroup = input.closest('.form-group');
                        if (formGroup) {
                            formGroup.style.borderLeft = 'none';
                            formGroup.style.paddingLeft = '0';
                            formGroup.style.backgroundColor = 'transparent';
                        }
                    }
                } else {
                    if (!input.value.trim()) {
                        isValid = false;
                        input.style.borderColor = '#dc3545';
                        input.style.boxShadow = '0 0 0 3px rgba(220, 53, 69, 0.1)';
                    } else {
                        input.style.borderColor = '#e9ecef';
                        input.style.boxShadow = 'none';
                    }
                }
            });

            if (!isValid) {
                alert('Por favor complete todos los campos obligatorios antes de continuar.');
                return false;
            }

            // Cambiar de paso
            currentStepDiv.style.display = 'none';

            const nextStepElement = document.getElementById(`step${currentStep + 1}`);
            if (nextStepElement) {
                nextStepElement.style.display = 'block';

                // Actualizar contador y progreso
                document.getElementById('currentStep').textContent = currentStep + 1;
                const progress = ((currentStep + 1) / 3) * 100;
                document.getElementById('surveyProgress').style.width = `${progress}%`;

                console.log('Navegaci√≥n exitosa al paso:', currentStep + 1);
                return true;
            }

            return false;
        }

        function prevStep(currentStep) {
            console.log('=== EJECUTANDO PREVSTEP ===');

            // Limpiar validaciones visuales del paso actual
            const currentStepDiv = document.getElementById(`step${currentStep}`);
            if (currentStepDiv) {
                const formGroups = currentStepDiv.querySelectorAll('.form-group');
                formGroups.forEach(group => {
                    group.style.borderLeft = 'none';
                    group.style.paddingLeft = '0';
                    group.style.backgroundColor = 'transparent';
                });

                const inputs = currentStepDiv.querySelectorAll('input, textarea');
                inputs.forEach(input => {
                    input.style.borderColor = '#e9ecef';
                    input.style.boxShadow = 'none';
                });
            }

            // Cambiar de paso
            document.getElementById(`step${currentStep}`).style.display = 'none';
            document.getElementById(`step${currentStep - 1}`).style.display = 'block';
            document.getElementById('currentStep').textContent = currentStep - 1;

            const progress = ((currentStep - 1) / 3) * 100;
            document.getElementById('surveyProgress').style.width = `${progress}%`;
        }

        // Funci√≥n de debug para llamar manualmente
        function debugSurvey() {
            console.log('=== DEBUG MANUAL ===');
            console.log('Modal visible:', $('#surveyModal').hasClass('show'));
            console.log('Steps disponibles:');
            console.log('- Step 1:', document.getElementById('step1') !== null);
            console.log('- Step 2:', document.getElementById('step2') !== null);
            console.log('- Step 3:', document.getElementById('step3') !== null);
            console.log('Botones siguiente:', document.querySelectorAll('.btn-next').length);
            console.log('Botones anterior:', document.querySelectorAll('.btn-prev').length);
        }
    </script>
