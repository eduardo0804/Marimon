@model Marimon.Models.Comprobante
@{
    ViewData["Title"] = "Pago Exitoso";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/graciasStipe.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Estilos para la encuesta de satisfacción */
        .survey-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-top: 2rem;
            border: 1px solid #e9ecef;
        }

        .survey-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #333;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .survey-form {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #E42229;
            box-shadow: 0 0 0 3px rgba(228, 34, 41, 0.1);
        }

        .satisfaction-rating {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            margin-bottom: 1rem;
        }

        .rating-option {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: white;
        }

        .rating-option:hover {
            border-color: #E42229;
            background-color: #fef7f7;
        }

        .rating-option.selected {
            border-color: #E42229;
            background-color: #E42229;
            color: white;
        }

        .rating-option input[type="radio"] {
            margin-right: 0.75rem;
            transform: scale(1.2);
        }

        .rating-emoji {
            font-size: 1.5rem;
            margin-left: auto;
        }

        .question-group {
            margin-bottom: 1.5rem;
        }

        .question-text {
            font-weight: 600;
            color: #333;
            margin-bottom: 1rem;
        }

        .yes-no-options {
            display: flex;
            gap: 1rem;
        }

        .yes-no-option {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.75rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: white;
            font-weight: 600;
        }

        .yes-no-option:hover {
            border-color: #E42229;
            background-color: #fef7f7;
        }

        .yes-no-option.selected {
            border-color: #E42229;
            background-color: #E42229;
            color: white;
        }

        .yes-no-option input[type="radio"] {
            margin-right: 0.5rem;
        }

        .comment-area {
            width: 100%;
            min-height: 100px;
            padding: 0.75rem 1rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
            font-family: inherit;
            resize: vertical;
            transition: border-color 0.3s ease;
        }

        .comment-area:focus {
            outline: none;
            border-color: #E42229;
            box-shadow: 0 0 0 3px rgba(228, 34, 41, 0.1);
        }

        .submit-survey-btn {
            background: linear-gradient(135deg, #E42229, #D42025);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 1rem;
        }

        .submit-survey-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(228, 34, 41, 0.3);
        }

        .survey-thank-you {
            text-align: center;
            padding: 2rem;
            background: #f8f9fa;
            border-radius: 8px;
            margin-top: 1rem;
            display: none;
        }

        .survey-thank-you.show {
            display: block;
        }

        }
    </style>
</head>

<body>
    <div class="container success-container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="success-card" style="position: relative;">
                    <div class="success-badge">
                        <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2Fadasdscarro.png?alt=media&token=0634f7cd-cb65-4e33-99a0-be780f19ecda"
                            alt="Auto" style="height: 50px; width: auto;" />
                    </div>

                    <div class="success-icon"
                        style="margin: 0 auto 1.2rem auto; display: flex; justify-content: center;">
                        <i class="fas fa-check-circle"></i>
                        <div class="success-rings">
                            <div class="ring ring1"></div>
                            <div class="ring ring2"></div>
                            <div class="ring ring3"></div>
                        </div>
                    </div>

                    <h1 class="success-title">¡Pago Completado con Éxito!</h1>

                    <div class="success-message">
                        <p>Hemos recibido tu comprobante de pago.</p>
                        <p>En breve, nuestro equipo validará la transacción y te notificaremos por correo electrónico.
                        </p>
                        <p>Gracias por confiar en Marimon Autopartes.</p>
                    </div>

                    <div class="receipt-info">
                        <div class="receipt-row">
                            <span class="receipt-label">Número de Comprobante:</span>
                            <span class="receipt-value boleta">
                                @(!string.IsNullOrEmpty(Model.com_evidencia) ?
                                                                System.IO.Path.GetFileNameWithoutExtension(Model.com_evidencia).Replace("evidencias_",
                                                                "") :
                                                                Model.com_id.ToString())
                            </span>
                        </div>
                        <div class="receipt-divider"></div>
                        <div class="receipt-message">
                            <i class="fas fa-envelope"></i>
                            <p>Te avisaremos por correo cuando tu pago sea validado y tu compra esté lista.</p>
                        </div>
                    </div>

                    <div class="action-buttons mt-4">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-store">
                            <i class="fas fa-store"></i>
                            <span>Volver a la Tienda</span>
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/Pedidos"
                            class="btn btn-outline-secondary ml-3">
                            <i class="fas fa-list-alt mr-1"></i>
                            <span>Mis Pedidos</span>
                        </a>
                    </div>

                    <div class="success-footer mt-4">
                        <div class="badge-row">
                            <span class="custom-badge">
                                <i class="fas fa-shield-alt"></i> Compra Segura
                            </span>
                            <span class="custom-badge">
                                <i class="fas fa-medal"></i> Calidad Garantizada
                            </span>
                            <span class="custom-badge">
                                <i class="fas fa-thumbs-up"></i> Servicio Confiable
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Encuesta de Satisfacción -->
                <div class="survey-container">
                    <h2 class="survey-title">Encuesta de Satisfacción</h2>

                    <form class="survey-form" id="satisfactionSurvey">
                        <div class="form-group">
                            <label class="form-label">Nombre:</label>
                            <input type="text" class="form-input" name="nombre" placeholder="Ingresa tu nombre">
                        </div>

                        <div class="form-group">
                            <label class="form-label">Correo Electrónico:</label>
                            <input type="email" class="form-input" name="correo"
                                placeholder="Ingresa tu correo electrónico">
                        </div>

                        <div class="form-group">
                            <label class="form-label">Grado de Satisfacción:</label>
                            <div class="satisfaction-rating">
                                <label class="rating-option">
                                    <input type="radio" name="satisfaccion" value="excelente">
                                    <span>Excelente</span>
                                    <span class="rating-emoji">😊</span>
                                </label>
                                <label class="rating-option">
                                    <input type="radio" name="satisfaccion" value="normal">
                                    <span>Normal</span>
                                    <span class="rating-emoji">😐</span>
                                </label>
                                <label class="rating-option">
                                    <input type="radio" name="satisfaccion" value="malo">
                                    <span>Malo</span>
                                    <span class="rating-emoji">😞</span>
                                </label>
                            </div>
                        </div>

                        <div class="question-group">
                            <div class="question-text">¿El servicio o producto cumplió sus expectativas?</div>
                            <div class="yes-no-options">
                                <label class="yes-no-option">
                                    <input type="radio" name="expectativas" value="si">
                                    <span>Sí</span>
                                </label>
                                <label class="yes-no-option">
                                    <input type="radio" name="expectativas" value="no">
                                    <span>No</span>
                                </label>
                            </div>
                        </div>

                        <div class="question-group">
                            <div class="question-text">¿La calidad del servicio/producto fue adecuada?</div>
                            <div class="yes-no-options">
                                <label class="yes-no-option">
                                    <input type="radio" name="calidad" value="si">
                                    <span>Sí</span>
                                </label>
                                <label class="yes-no-option">
                                    <input type="radio" name="calidad" value="no">
                                    <span>No</span>
                                </label>
                            </div>
                        </div>

                        <div class="question-group">
                            <div class="question-text">¿Recomendaría este servicio/producto?</div>
                            <div class="yes-no-options">
                                <label class="yes-no-option">
                                    <input type="radio" name="recomendaria" value="si">
                                    <span>Sí</span>
                                </label>
                                <label class="yes-no-option">
                                    <input type="radio" name="recomendaria" value="no">
                                    <span>No</span>
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Tu comentario:</label>
                            <textarea class="comment-area" name="comentario"
                                placeholder="Comparte tu experiencia con nosotros..."></textarea>
                        </div>

                        <button type="submit" class="submit-survey-btn">
                            <i class="fas fa-paper-plane mr-2"></i>
                            Enviar Encuesta
                        </button>
                    </form>

                    <div class="survey-thank-you" id="surveyThankYou">
                        <i class="fas fa-heart" style="font-size: 2rem; color: #E42229; margin-bottom: 1rem;"></i>
                        <h3 style="color: #333; margin-bottom: 0.5rem;">¡Gracias por tu opinión!</h3>
                        <p style="color: #666;">Tu feedback es muy importante para nosotros y nos ayuda a mejorar
                            continuamente.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".success-card").hide().fadeIn(800);

            setTimeout(function () {
                $(".ring").addClass("animate");
            }, 300);

            setTimeout(function () {
                confetti({
                    particleCount: 150,
                    spread: 80,
                    origin: { y: 0.6 },
                    colors: ['#E42229', '#D42025', '#626C66', '#ffda3a'],
                    disableForReducedMotion: true
                });

                setTimeout(function () {
                    confetti({
                        particleCount: 50,
                        angle: 120,
                        spread: 55,
                        origin: { x: 0, y: 0.6 },
                        colors: ['#E42229', '#ffda3a'],
                    });

                    confetti({
                        particleCount: 50,
                        angle: 60,
                        spread: 55,
                        origin: { x: 1, y: 0.6 },
                        colors: ['#D42025', '#626C66'],
                    });
                }, 700);
            }, 500);

            $(".btn").hover(
                function () {
                    $(this).css({
                        "transform": "translateY(-2px)",
                        "box-shadow": "0 4px 8px rgba(0,0,0,0.1)"
                    });
                },
                function () {
                    $(this).css({
                        "transform": "translateY(0)",
                        "box-shadow": "none"
                    });
                }
            );

            $(".custom-badge").hover(
                function () {
                    $(this).css({
                        "background-color": "#f0f0f0",
                        "transform": "scale(1.05)"
                    });
                },
                function () {
                    $(this).css({
                        "background-color": "#f8f8f8",
                        "transform": "scale(1)"
                    });
                }
            );

            // Funcionalidad de la encuesta
            $('.rating-option').click(function () {
                $('.rating-option').removeClass('selected');
                $(this).addClass('selected');
                $(this).find('input[type="radio"]').prop('checked', true);
            });

            $('.yes-no-option').click(function () {
                var groupName = $(this).find('input').attr('name');
                $('input[name="' + groupName + '"]').parent().removeClass('selected');
                $(this).addClass('selected');
                $(this).find('input[type="radio"]').prop('checked', true);
            });

            $('#satisfactionSurvey').submit(function (e) {
                e.preventDefault();

                // Aquí puedes agregar la lógica para enviar los datos al servidor
                var formData = {
                    nombre: $('input[name="nombre"]').val(),
                    correo: $('input[name="correo"]').val(),
                    satisfaccion: $('input[name="satisfaccion"]:checked').val(),
                    expectativas: $('input[name="expectativas"]:checked').val(),
                    calidad: $('input[name="calidad"]:checked').val(),
                    recomendaria: $('input[name="recomendaria"]:checked').val(),
                    comentario: $('textarea[name="comentario"]').val()
                };

                console.log('Datos de la encuesta:', formData);

                // Mostrar mensaje de agradecimiento
                $('.survey-form').hide();
                $('#surveyThankYou').addClass('show');

                // Opcional: enviar datos vía AJAX
                /*
                $.ajax({
                    url: '/tu-endpoint-para-guardar-encuesta',
                    method: 'POST',
                    data: formData,
                    success: function(response) {
                        console.log('Encuesta enviada exitosamente');
                    },
                    error: function(xhr, status, error) {
                        console.error('Error al enviar encuesta');
                    }
                });
                */
            });
        });
    </script>
</body>

</html>