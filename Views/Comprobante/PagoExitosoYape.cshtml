
@model Marimon.Models.Comprobante
@{
    ViewData["Title"] = "Pago Exitoso";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="card-title mb-4">¡Pago Completado con Éxito!</h2>
                    <p class="card-text">Tu compra ha sido procesada correctamente.</p>
                    <p>Número de Comprobante: <strong>@(Model.tipo_comprobante.ToUpper())-@Model.com_id.ToString("0000000")</strong></p>
                    <p>Te hemos enviado el comprobante a tu correo electrónico.</p>
                    
                    <hr class="my-4" />
                    
                    <div class="mt-4">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">Volver a la tienda</a>
                        <a asp-area="Identity" asp-page="/Account/Manage/Pedidos" class="btn btn-outline-secondary ml-2">Ver mis compras</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Desactivar cualquier verificación automática del carrito
        $(document).ready(function() {
            // Desactivar cualquier redirección automática
            window.onbeforeunload = null;
            
            // Desactivar cualquier temporizador existente
            var existingTimers = window.setTimeout(function() {}, 0);
            while (existingTimers--) {
                window.clearTimeout(existingTimers);
            }
            
            // Prevenir cualquier solicitud AJAX periódica
            $.ajaxSetup({
                beforeSend: function(xhr, settings) {
                    // Comprobar si la URL contiene 'Carrito' y cancelar esas solicitudes
                    if (settings.url && settings.url.includes('Carrito')) {
                        xhr.abort();
                        return false;
                    }
                }
            });
        });
    </script>
}