@model Marimon.Models.Entradas
@{
    ViewData["Title"] = "Registro de Salidas";
    Layout = "_LayoutAdmin";
}

<!-- Contenido Principal -->
<div class="container mt-4">
    <!-- Título y descripción -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow border-0 rounded-lg overflow-hidden">
                <div class="card-body d-flex p-0">
                    <div class="bg-danger text-white p-4 d-flex align-items-center justify-content-center"
                        style="background-color: #d42025 !important; min-width: 120px;">
                        <img src="~/images/salida.png" alt="Imagen almacén" class="img-fluid"
                            style="max-width: 80px;" />
                    </div>
                    <div class="p-4">
                        <h2 class="fw-bold mb-2">Registro de Salidas</h2>
                        <p class="text-muted mb-0">En esta sección podrá registrar las salidas de autopartes del
                            inventario. Seleccione los productos que desea retirar y registre la cantidad.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas con animación -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-success border-4 rounded-3"
            role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-start border-danger border-4 rounded-3"
            role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Banner destacado similar a la imagen de referencia -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 rounded-3 overflow-hidden">
                <div class="card-body p-0">
                    <div class="bg-danger text-white" style="background-color: #d42025 !important;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="~/images/salida.png" alt="Control de inventario" class="img-fluid h-100"
                                    style="object-fit: cover;">
                            </div>
                            <div class="col-md-8 p-4 d-flex flex-column justify-content-center">
                                <h3 class="fw-bold mb-3">Control de Inventario Eficiente</h3>
                                <p class="mb-0">
                                    Administre eficientemente las salidas de productos del inventario. Nuestro sistema
                                    permite
                                    mantener un registro detallado de cada movimiento, asegurando una gestión precisa y
                                    transparente
                                    de su stock.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-lg mb-4">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">SELECCIONA UNA AUTOPARTE</h5>
                    <button type="button" class="btn btn-danger py-2 text-white fw-bold position-relative"
                        id="registrarButton">
                        <i class="fas fa-sign-out-alt me-2"></i>REGISTRAR SALIDAS
                    </button>
                </div>
                <div class="card-body p-0">
                    <form id="salidaForm" asp-action="RegistrarSalida" asp-controller="Admin" method="post">
                        <div class="table-responsive">
                            <table class="table table-hover" id="productosTable">
                                <thead class="table-light">
                                    <tr>
                                        <th width="50" class="text-center">
                                            <div class="form-check d-flex justify-content-center">
                                                <input class="form-check-input" type="checkbox" id="selectAll">
                                            </div>
                                        </th>
                                        <th>Cód. Autoparte</th>
                                        <th>Nombre</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-center">Imagen</th>
                                        <th class="text-center">Fecha Salida</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.Productos != null)
                                    {
                                        @foreach (var producto in ViewBag.Productos)
                                        {
                                            <tr class="align-middle">
                                                <td class="text-center">
                                                    <div class="form-check d-flex justify-content-center">
                                                        <input class="form-check-input producto-check" type="checkbox"
                                                            name="ProductosSeleccionados" value="@producto.aut_id">
                                                    </div>
                                                </td>
                                                <td>@producto.aut_codigo</td>
                                                <td>@producto.aut_nombre</td>
                                                <td class="text-center">
                                                    <input type="number" name="Cantidades[@producto.aut_id]"
                                                        class="form-control form-control-sm cantidad-input" min="1"
                                                        max="@producto.aut_cantidad" value="1"
                                                        style="width: 80px; margin: 0 auto;" disabled>
                                                </td>
                                                <td class="text-center">
                                                    <div class="avatar-item mx-auto">
                                                        <img src="@producto.aut_imagen" alt="@producto.aut_nombre"
                                                            class="rounded" width="36">
                                                    </div>
                                                </td>
                                                <td class="text-center">@DateTime.Now.ToString("dd-MM-yyyy")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center py-3">No hay productos disponibles en el
                                                inventario</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Información de contacto mejorada -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-body">
                    <h5 class="text-center mb-4 fw-bold">CONTÁCTANOS</h5>
                    <div class="row justify-content-center">
