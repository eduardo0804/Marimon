        }

        /* Animaciones */
        .alert {
            animation: fadeInDown 0.5s ease;
        }



        /* Estilos para tarjetas y elementos */
        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1) !important;
        }

        /* Header */
        .modulo-header {
            width: 100%;
        }

        .modulo-title-bar {
            background-color: #d42025;
            color: white;
            padding: 15px 25px;
            text-align: left;
        }

        .modulo-title {
            margin: 0;
            font-size: 24px;
            font-weight: 600;
        }

        /* Footer de las tarjetas */
        .card-footer {
            background-color: #f8f9fa;
            color: #6c757d;
            padding: 12px;
            text-align: center;
        }

        /* Footer principal */
        .modulo-footer {
