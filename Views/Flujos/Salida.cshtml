                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                                    style="width: 48px; height: 48px; background-color: #d42025;">
                                    <i class="fas fa-phone text-white"></i>
                                </div>
                                <div>
                                    <strong class="d-block mb-1">Teléfono:</strong>
                                    <div>
                                        <a href="tel:+51964489537" class="text-decoration-none text-body">+51
                                            964489537</a>
                                        <br>
                                        <a href="tel:+51970274214" class="text-decoration-none text-body">+51
                                            970274214</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                                    style="width: 48px; height: 48px; background-color: #d42025;">
                                    <i class="fas fa-map-marker-alt text-white"></i>
                                </div>
                                <div>
                                    <strong class="d-block mb-1">Dirección:</strong>
                                    <span>Jr. Los Aguilas 284 - Ofic. 103 <br>Bellavista</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Manejar selección de checkboxes
        document.addEventListener('DOMContentLoaded', function () {
            const selectAllCheckbox = document.getElementById('selectAll');
            const productoCheckboxes = document.querySelectorAll('.producto-check');
            const cantidadInputs = document.querySelectorAll('.cantidad-input');
            const submitButton = document.getElementById('submitButton');
            const registrarButton = document.getElementById('registrarButton');

            // Aplicar estilos a los botones
            [submitButton, registrarButton].forEach(button => {
                if (button) {
                    button.style.backgroundColor = '#d42025';

                    button.addEventListener('mouseover', function () {
                        this.style.backgroundColor = '#b91d21';
                        this.style.transform = 'translateY(-2px)';
                        this.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.2)';
                    });

                    button.addEventListener('mouseout', function () {
                        this.style.backgroundColor = '#d42025';
                        this.style.transform = 'translateY(0)';
                        this.style.boxShadow = '0 2px 5px rgba(0, 0, 0, 0.2)';
                    });
                }
            });

            // Hacer que el botón superior también envíe el formulario
            if (registrarButton) {
                registrarButton.addEventListener('click', function () {
                    document.getElementById('salidaForm').submit();
                });
            }

            // Manejar el checkbox "Seleccionar todos"
            if (selectAllCheckbox) {
                selectAllCheckbox.addEventListener('change', function () {
                    const isChecked = this.checked;

                    productoCheckboxes.forEach((checkbox, index) => {
                        checkbox.checked = isChecked;
                        if (cantidadInputs[index]) {
                            cantidadInputs[index].disabled = !isChecked;
                        }
                    });
                });
            }

            // Manejar checkboxes individuales
            productoCheckboxes.forEach((checkbox, index) => {
                checkbox.addEventListener('change', function () {
                    if (cantidadInputs[index]) {
                        cantidadInputs[index].disabled = !this.checked;
                    }

                    // Verificar si todos están seleccionados para actualizar el checkbox principal
                    let allChecked = true;
                    productoCheckboxes.forEach(cb => {
                        if (!cb.checked) allChecked = false;
                    });

                    if (selectAllCheckbox) {
                        selectAllCheckbox.checked = allChecked;
                    }
                });
            });

            // Validación del formulario
            document.getElementById('salidaForm').addEventListener('submit', function (e) {
                let alMenosUnoSeleccionado = false;
                productoCheckboxes.forEach(checkbox => {
                    if (checkbox.checked) alMenosUnoSeleccionado = true;
                });

                if (!alMenosUnoSeleccionado) {
                    e.preventDefault();
                    alert('Debe seleccionar al menos un producto');
                    return false;
                }

                return true;
            });
        });
        document.addEventListener('DOMContentLoaded', function () {
            // Get the buttons
            const submitButton = document.getElementById('submitButton');
            const registrarButton = document.getElementById('registrarButton');

            console.log('Submit button:', submitButton); // Debug
            console.log('Registrar button:', registrarButton); // Debug

            // Ensure buttons exist before adding event listeners
            if (registrarButton) {
                registrarButton.addEventListener('click', function () {
                    document.getElementById('salidaForm').submit();
                });
            }

            // Validate that at least one product is selected
            if (document.getElementById('salidaForm')) {
                document.getElementById('salidaForm').addEventListener('submit', function (e) {
                    const productoCheckboxes = document.querySelectorAll('.producto-check');
                    let alMenosUnoSeleccionado = false;

                    productoCheckboxes.forEach(checkbox => {
                        if (checkbox.checked) alMenosUnoSeleccionado = true;
                    });

                    if (!alMenosUnoSeleccionado) {
                        e.preventDefault();
                        alert('Debe seleccionar al menos un producto');
                        return false;
                    }

                    return true;
                });
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <style>
        /* Estilo específico para los botones */
        .btn-danger,
        #submitButton,
        #registrarButton {
            background-color: #d42025 !important;
            color: white !important;
            transition: all 0.3s ease;
            border: none !important;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            display: block !important;
            /* Forzar visualización */
            visibility: visible !important;
            /* Garantizar visibilidad */
            opacity: 1 !important;
            /* Garantizar opacidad completa */
            z-index: 10 !important;
            /* Colocar por encima de otros elementos */
            position: relative !important;
            /* Evitar que position:absolute lo oculte */
        }

        .hover-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(255, 255, 255, 0.2);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .btn-registro:hover .hover-overlay,
        #submitButton:hover .hover-overlay,
        #registrarButton:hover .hover-overlay {
            opacity: 1;
        }

        /* Estilos para la tabla y checkboxes */
        .form-check-input {
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: #d42025;
            border-color: #d42025;
        }

        .avatar-item {
