@model Marimon.Models.Autoparte
@{
    ViewData["Title"] = "Registro de Entradas";
    Layout = "_LayoutAdmin";
}

<!-- Contenido Principal -->
<div class="container mt-4">
    <!-- Título y descripción -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-danger text-white">
                <div class="card-body d-flex">
                    <div class="me-3">
                        <img src="~/images/entrada-almacen.jpg" alt="Imagen almacén" class="img-fluid"
                            style="max-width: 150px;" />
                    </div>
                    <div>
                        <h2>Registro de Entradas</h2>
                        <p>En esta sección podrá registrar las nuevas entradas de autopartes al inventario. Seleccione
                            la categoría y el producto específico, luego indique la cantidad a ingresar.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Formulario de registro -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="text-center">REGISTRAR ENTRADA</h5>
                </div>
                <div class="card-body"></div>
                <form asp-action="RegistrarEntrada" asp-controller="Flujo" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="CategoriaId" class="form-label">Categoría de artículo</label>
                        <select id="categoriaSelect" class="form-select" asp-for="CategoriaId"
                            asp-items="ViewBag.Categorias" onchange="cargarProductos()">
                            <option value="">-- Seleccionar Categoría --</option>
                        </select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="aut_id" class="form-label">NOMBRE</label>
                        <select id="productoSelect" class="form-select" asp-for="aut_id" disabled>
                            <option value="">-- Primero seleccione una categoría --</option>
                        </select>
                        <span asp-validation-for="aut_id" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label  class="form-label">Cantidad</label>
                        <input  type="number" class="form-control" min="1" value="1">
                        <span  class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit">REGISTRAR ENTRADA</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

