@{
    ViewBag.Title = "Registrar Autoparte";
    Layout = "_LayoutAdmin";
}

<div class="container mt-4" style="max-width: 400px;">
    <h3 class="text-center" style="color: #c0392b;">Registrar Autoparte</h3>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <label for="codigo">Código de autoparte <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="codigo" name="codigo" required />
        </div>

        <div class="form-group mt-3">
            <label for="nombre">Nombre <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="nombre" name="nombre" required />
        </div>

        <div class="form-group mt-3">
            <label for="descripcion">Descripción <span class="text-danger">*</span></label>
            <textarea class="form-control" id="descripcion" name="descripcion" rows="2" required></textarea>
        </div>

        <div class="form-group mt-3">
            <label for="especificaciones">Especificaciones <span class="text-danger">*</span></label>
            <textarea class="form-control" id="especificaciones" name="especificaciones" rows="2" required></textarea>
        </div>

        <div class="form-row mt-3 d-flex gap-2">
            <div class="form-group w-50">
                <label for="precio">Precio <span class="text-danger">*</span></label>
                <input type="number" step="0.01" class="form-control" id="precio" name="precio" required />
            </div>

            <div class="form-group w-50">
                <label for="cantidad">Cantidad</label>
                <input type="number" class="form-control" id="cantidad" name="cantidad" />
            </div>
        </div>

        <div class="form-group mt-3">
            <label for="imagen">Imagen</label>
            <input type="file" class="form-control" id="imagen" name="imagen" />
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-danger w-100">Registrar</button>
        </div>
    </form>
</div>
