  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  font-size: 14px;
  white-space: normal;
}

.description-tooltip::after {
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  margin-left: -5px;
  border-width: 5px;
  border-style: solid;
  border-color: #333 transparent transparent transparent;
}

.td-description:hover .description-tooltip {
  visibility: visible;
  opacity: 1;
}

