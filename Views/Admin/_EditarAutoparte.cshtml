@model Marimon.Models.Autoparte

<div class="container mt-4" style="max-width: 400px;">
    <h3 class="text-center" style="color: #E42229;">Editar autoparte</h3>

    <form asp-controller="Admin" asp-action="Editar" method="post" enctype="multipart/form-data">
        <!-- Campo oculto para el ID -->
        <input type="hidden" asp-for="aut_id" />

        <div class="form-group mt-3">
            <label for="aut_nombre">Nombre <span class="text-danger">*</span></label>
            <input asp-for="aut_nombre" class="form-control" required />
        </div>

        <div class="form-group mt-3">
            <label for="aut_descripcion">Descripción <span class="text-danger">*</span></label>
            <textarea asp-for="aut_descripcion" class="form-control" rows="2" required></textarea>
        </div>

        <div class="form-group mt-3">
            <label for="aut_especificacion">Especificaciones <span class="text-danger">*</span></label>
            <textarea asp-for="aut_especificacion" class="form-control" rows="2" required></textarea>
        </div>

        <div class="form-row mt-3 d-flex gap-2">
            <div class="form-group w-50">
                <label for="aut_precio">Precio <span class="text-danger">*</span></label>
                <input asp-for="aut_precio" class="form-control" step="0.01" required />
            </div>
        </div>

        <div class="form-group">
            <label for="imagen">Imagen (Dejar vacío si no se desea cambiar)</label>
            <input type="file" class="form-control" name="imagen" id="imagen" />
            @if (!string.IsNullOrEmpty(Model.aut_imagen))
            {
                <div class="mt-2">
                    <img src="@Model.aut_imagen" alt="Imagen autoparte" class="img-thumbnail" width="150" />
                </div>
            }
            <span class="text-danger">@Html.ValidationMessage("imagen", null, new { @class = "text-danger" })</span>
        </div>

        <div class="form-group mt-3">
            <label for="CategoriaId">Categoría <span class="text-danger">*</span></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="@(ViewBag.Categorias as SelectList)" required>
                <option value="">-- Selecciona una categoría --</option>
            </select>
        </div>

        <div class="text-center mt-4">
            <button type="submit">Guardar cambios</button>
        </div>
    </form>
</div>
