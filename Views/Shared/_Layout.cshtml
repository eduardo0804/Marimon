<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Marimon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Marimon.styles.css" asp-append-version="true" />

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100%;
    }

    html,
    body {
        height: 100%;
    }

    .bottom-content a {
        color: white;
        text-decoration: none;
    }

    .bottom-content a:hover {
        text-decoration: underline;
    }

    /* Estilo para los enlaces del menú principal */
    .primer_menu {
        display: flex;
        align-items: center;
    }

    .primer_menu>a,
    .primer_menu .dropdown>a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        padding: 0 15px;
        /* Aumentar el espaciado horizontal */
        transition: color 0.3s;
    }

    .primer_menu>a:hover,
    .primer_menu .dropdown>a:hover {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
    }
</style>

<body>
    <header>
        <div class="contenedor-menu">
            <!-- Logo -->
            <div class="logo-contenedor">
                <a href="/" class="logo"><img src="~/images/logo_marimon.png" alt="Logo" style="width: 140px;"></a>
            </div>

            <!-- Toggle para menú móvil -->
            <input type="checkbox" id="menu-toggle" class="hidden">
            <label for="menu-toggle" class="menu-icon"><i class="fa-solid fa-bars"></i></label>
            <label for="menu-toggle" class="close-icon"><i class="fa-solid fa-xmark"></i></label>

            <!-- Menú principal -->
            <nav class="primer_menu">
                <a href="#">INICIO</a>
                <div class="dropdown">
                    <a asp-controller="Servicios" asp-action="Index" class="dropdown-main">SERVICIOS</a>
                    <input type="checkbox" id="services-toggle" class="submenu-toggle hidden">
                    <label for="services-toggle" class="dropdown-toggle"><i class="fa-solid fa-plus"></i><i
                            class="fa-solid fa-minus"></i></label>
                    <ul class="submenu text_drop">
                        <li><a href="#">Mantenimiento y Frenos</a></li>
                        <li><a asp-controller="Servicios" asp-action="Servicio">Diagnóstico y Scanner</a></li>
                        <li><a href="#">Mecatrónica y Electrónica</a></li>
                        <li><a href="#">Sistema de Refrigeración</a></li>
                        <li><a href="#">Aire Acondicionado</a></li>
                        <li><a href="#">Planchado y Pintura</a></li>
                        <li><a href="#">Servicio de Planchado y Pintura automotriz</a></li>
                        <li><a href="#">Conversión a GLP en Lima</a></li>
                        <li><a href="#">Conversión a GNV en Lima</a></li>
                        <li><a href="#">Auxilio Mecánico</a></li>
                    </ul>
                </div>
                <a asp-controller="Catalogo" asp-action="Index">CATÁLOGOS</a>
                <a asp-controller="Nosotros" asp-action="Index">NOSOTROS</a>
            </nav>

            <!-- Menú secundario (carrito y login) -->
            <nav class="segundo_menu">
                <a href="/Carrito" class="cart-icon"><i class="fa-solid fa-cart-shopping"></i></a>
                <div class="dropdown-user">
                    <a href="/Identity/Account/Login" class="dropdown-main">Iniciar Sesión <i
                            class="fa-solid fa-user"></i></a>
                </div>
            </nav>
        </div>
    </header>

