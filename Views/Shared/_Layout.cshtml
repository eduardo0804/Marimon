    @{
        var isFullWidth = ViewBag.FullWidthLayout as bool? ?? false;
    }

    @if (isFullWidth)
    {
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-0">
                @RenderBody()
            </main>
        </div>
    }

    <footer>
        <div class="contenido-footer">
            <!-- Parte superior: logo y redes -->
            <div class="top">
                <div class="logo-details">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img style="width: 140px;" src="/images/logo_marimon.png" alt="Logo Marimon">
                    </a>
                </div>
                <div class="media-icons-wrapper">
                    <span class="media-label">Síguenos en:</span>
                    <div class="media-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>

            <!-- Parte media: contacto -->
            <div class="middle">
                <div class="contact-item">
                    <div class="icono-circle">
                        <i class="fas fa-envelope icono"></i>
                    </div>
                    <div>
                        <strong>Email:</strong><br>
                        maximito@gmail.com
                    </div>
                </div>
                <div class="contact-item">
                    <div class="icono-circle">
                        <i class="fas fa-phone icono"></i>
                    </div>
                    <div>
                        <strong>Teléfono:</strong><br>
                        +51 964 489 537<br>
                        +51 970 274 214
                    </div>
                </div>
                <div class="contact-item">
                    <div class="icono-circle">
                        <i class="fas fa-map-marker-alt icono"></i>
                    </div>
                    <div>
                        <strong>Dirección:</strong><br>
                        Jr. Las Ánguilas 283 - Ofic. 103 Bellavista
                    </div>
                </div>
            </div>
        </div>

        <!-- Parte inferior -->
        <div class="bottom">
            <div class="bottom-content">
                <div>Copyright &#169; 2021 <a asp-controller="Home" asp-action="Index"
                        style="color: white; text-decoration: none;">Marimon</a></div>
                <div>
                    <a href="#" style="color: white; text-decoration: none;"
                        onmouseover="this.style.textDecoration='underline'"
                        onmouseout="this.style.textDecoration='none'">
                        <i class="fa-solid fa-book"></i> Libro de Reclamaciones
                    </a> |
                    <a asp-controller="Home" asp-action="Terminos" style="color: white; text-decoration: none;"
                        onmouseover="this.style.textDecoration='underline'"
                        onmouseout="this.style.textDecoration='none'">
                        Términos y Condiciones
                    </a>
                </div>
                <div>Developed by <strong>Name_Grupo</strong></div>
            </div>
        </div>
    </footer>



