<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Marimon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Marimon.styles.css" asp-append-version="true" />

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100%;
        font-family: "Nunito";
    }

    html,
    body {
        height: 100%;
    }
</style>
<body>
    <header>
        <div class="contenedor-menu">
            <!-- Toggle para menú móvil -->
            <input type="radio" name="slider" id="menu-btn">
            <input type="radio" name="slider" id="close-btn">
            <label for="menu-btn" class="btn menu-btn"><i class="fa-solid fa-bars"></i></label>
            <label for="close-btn" class="btn close-btn"><i class="fa-solid fa-xmark"></i></label>
            
            <!-- Logo -->
            <div class="logo-contenedor">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="logo"><img src="~/images/logo_marimon.png" alt="Logo" style="width: 140px;"></a>
            </div>
            
            <!-- Menú principal centrado -->
            <nav class="primer_menu">
                <a asp-area="" asp-controller="Home" asp-action="Index">INICIO</a>
                <!-- Dropdown SERVICIOS -->
                <div class="dropdown">
                    <a asp-area="" asp-controller="Servicios" asp-action="Index" class="desktop-item">SERVICIOS</a>
                    <ul class="drop-menu">
                        <li><a href="#">Mantenimiento y Frenos</a></li>
                        <li><a asp-area="" asp-controller="Servicios" asp-action="Servicio">Diagnóstico y Scanner</a></li>
                        <li><a href="#">Mecatrónica y Electrónica</a></li>
                        <li><a href="#">Sistema de Refrigeración</a></li>
                        <li><a href="#">Aire Acondicionado</a></li>
                        <li><a href="#">Planchado y Pintura</a></li>
                        <li><a href="#">Servicio de Planchado y Pintura automotriz</a></li>
                        <li><a href="#">Conversión a GLP en Lima</a></li>
                        <li><a href="#">Conversión a GNV en Lima</a></li>
                        <li><a href="#">Auxilio Mecánico</a></li>
                    </ul>
                </div>
                <a asp-area="" asp-controller="Catalogo" asp-action="Index">CATÁLOGOS</a>
                <a asp-area="" asp-controller="Nosotros" asp-action="Index">NOSOTROS</a>
            </nav>

            <!-- Menú secundario alineado a la derecha -->
            <partial name="_LoginPartial" />
            
            <!-- Menú móvil -->
            <nav class="movil_menu">
                <label for="close-btn" class="btn close-btn-inside"><i class="fa-solid fa-xmark"></i></label>
                
                <a asp-area="" asp-controller="Home" asp-action="Index">INICIO</a>
                <!-- Dropdown SERVICIOS móvil -->
                <div class="dropdown-movil">
                    <input type="checkbox" id="showServicios-movil">
                    <label for="showServicios-movil">SERVICIOS <i class="fa-solid fa-chevron-down"></i></label><!-- FALTA -->
                    <ul class="drop-menu-movil">
                        <li><a href="#">Mantenimiento y Frenos</a></li>
                        <li><a asp-area="" asp-controller="Servicios" asp-action="Servicio">Diagnóstico y Scanner</a></li>
                        <li><a href="#">Mecatrónica y Electrónica</a></li>
                        <li><a href="#">Sistema de Refrigeración</a></li>
                        <li><a href="#">Aire Acondicionado</a></li>
                        <li><a href="#">Planchado y Pintura</a></li>
                        <li><a href="#">Servicio de Planchado y Pintura automotriz</a></li>
                        <li><a href="#">Conversión a GLP en Lima</a></li>
                        <li><a href="#">Conversión a GNV en Lima</a></li>
                        <li><a href="#">Auxilio Mecánico</a></li>
                    </ul>
                </div>
            
                <a asp-area="" asp-controller="Catalogo" asp-action="Index">CATÁLOGOS</a>
                <a asp-area="" asp-controller="Nosotros" asp-action="Index">NOSOTROS</a>

                <a asp-controller="Carrito" asp-action="Index" class="cart-icon-movil"><i class="fa-solid fa-cart-shopping"></i> Carrito</a>
                <!-- Dropdown Iniciar Sesión móvil -->
                <partial name="_LoginPartial_Movil" />
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="p-0 m-0">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="contenido-footer">
            <!-- Parte superior: logo y redes -->
            <div class="top">
                <div class="logo-details">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img style="width: 140px;" src="/images/logo_marimon.png" alt="Logo Marimon">
                    </a>
                </div>
                <div class="media-icons-wrapper">
                    <span class="media-label">Síguenos en:</span>
                    <div class="media-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>

            <!-- Parte media: contacto -->
            <div class="middle">
                <div class="contact-item">
                    <div class="icono-circle">
                        <i class="fas fa-envelope icono"></i>
                    </div>
                    <div>
                        <strong>Email:</strong><br>
                        maximito@gmail.com
                    </div>
                </div>
                <div class="contact-item">
                    <div class="icono-circle">
                        <i class="fas fa-phone icono"></i>
                    </div>
                    <div>
                        <strong>Teléfono:</strong><br>
                        +51 964 489 537<br>
                        +51 970 274 214
                    </div>
                </div>
                <div class="contact-item">
                    <div class="icono-circle">
                        <i class="fas fa-map-marker-alt icono"></i>
                    </div>
                    <div>
                        <strong>Dirección:</strong><br>
                        Jr. Las Ánguilas 283 - Ofic. 103 Bellavista
                    </div>
                </div>
            </div>
        </div>

        <!-- Parte inferior -->
        <div class="bottom">
            <div class="bottom-content">
                <div>Copyright &#169; 2021 <a asp-controller="Home" asp-action="Index" style="color: white; text-decoration: none;">Marimon</a></div>
                <div><a href="#">Términos y Condiciones</a></div>
                <div>Developed by <strong>Name_Grupo</strong></div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--<script src="~/js/site.js" asp-append-version="true"></script> -->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>