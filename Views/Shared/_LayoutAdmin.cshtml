@{
    Layout = null;
    var path = Context.Request.Path.Value.ToLower();
    var mostrarFlecha = !(path == "/admin");
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel de Administración</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/menus.css" asp-append-version="true" />

    <style>
        .nav-link {
            color: #212529;
        }

        .nav-link:hover,
        .nav-link.active {
            background-color: #d42025;
            color: white;
        }
    </style>
</head>

<body class="bg-light d-flex flex-column min-vh-100">
    <!-- Cabecera -->
    <header style="background-color: red; color: white; padding: 10px 20px; margin: 0;">
        <div class="contenedor-menu" style="display: flex; align-items: center; justify-content: space-between;">
            <div style="display: flex; align-items: center;">
                <!-- Flecha atrás -->
                @if (mostrarFlecha)
                {
                    <a href="javascript:window.history.back();" title="Volver atrás"
                        style="color: white; font-size: 24px; margin-right: 16px;">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                }
                <!-- Logo -->
                <a href="/Autopartes" class="logo-contenedor"
                    style="display: flex; align-items: center; text-decoration: none;">
                    <img src="~/images/logo_marimonWhite.png" alt="Logo Marimon" class="logo-img" style="height: 40px;">
                </a>
            </div>
            <!-- Título centrado -->
            <h1 class="titulo-centro" style="margin: 0; font-size: 22px; font-weight: bold;">MODULO DE AUTOPARTES</h1>
            <!-- Cerrar Sesión -->
            <a href="@Url.Action("Index", "Home")"
                style="color: white; font-weight: bold; text-decoration: none;">Cerrar Sesión</a>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="flex-grow-1 container py-4">
        @RenderBody()
    </main>

    <!-- Pie de página -->
    <!-- Footer -->
    <footer style="background-color: red; color: white; padding: 10px 20px;">
        <div class="footer-content"
            style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap;">
            <div class="footer-left">
                <p style="margin: 0;">Copyright 2025 © Marimon</p>
            </div>
            <div class="footer-center">
                <a href="#" style="color: white; text-decoration: underline; margin: 0 5px;">Libro de Reclamaciones</a>
                |
                <a href="#" style="color: white; text-decoration: underline; margin: 0 5px;">Términos y Condiciones</a>
            </div>
            <div class="footer-right">
                <p style="margin: 0;">Developed by "Equipo Scrum"</p>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>