@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel de Administración</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/menus.css" asp-append-version="true" />
    <style>
        .nav-link {
            color: #212529;
        }
        .nav-link:hover, .nav-link.active {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body class="bg-light d-flex flex-column min-vh-100">
    <!-- Cabecera -->
      <header class="modulo-header"></header>
        <div class="modulo-title-bar">
            <h1 class="modulo-title">MODULO DE AUTOPARTES</h1>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="flex-grow-1 container py-4">
        @RenderBody()
    </main>

    <!-- Pie de página -->
    <!-- Footer -->
    <footer class="modulo-footer">
        <div class="footer-left">
            <p>Copyright 2025 © Marimon</p>
        </div>
        <div class="footer-center">
            <a href="#">Libro de Reclamaciones</a> | <a href="#">Términos y Condiciones</a>
        </div>
        <div class="footer-right">
            <p>Developed by "Equipo Scrum"</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
