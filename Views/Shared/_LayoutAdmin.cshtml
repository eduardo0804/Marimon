@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Módulo de Autopartes</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            flex: 1;
        }
    </style>
</head>
<body class="bg-light">

    <div class="content-wrapper">

        <!-- Cabecera -->
        <div class="container-fluid px-0">
            <div class="bg-danger text-white py-2">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">MODULO DE AUTOPARTES</h2>
                    <i class="fas fa-user-circle fa-2x"></i>
                </div>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="container-fluid py-4 main-content">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="bg-danger text-white py-2">
            <div class="container-fluid">
                <div class="row align-items-baseline">
                    <div class="col-md-6">
                        <small>&copy; 2025 - Maritimori</small>
                    </div>
                    <div class="col-md-6 text-end">
                        <small>Developed by "Name_Grupo"</small>
                    </div>
                </div>
            </div>
        </footer>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
