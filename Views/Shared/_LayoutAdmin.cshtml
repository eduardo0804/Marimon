@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel de Administración</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/menus.css" asp-append-version="true" />
    <style>
        .nav-link {
            color: #212529;
        }
        .nav-link:hover, .nav-link.active {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body class="bg-light d-flex flex-column min-vh-100">
    <!-- Cabecera -->
    <div class="container-fluid px-0">
        <header>
            <div class="contenedor-menu">
                <!-- Logo izquierdo -->
                <div class="logo-contenedor">
                    <a href="#" class="logo">
                        <img src="~/images/logo_marimon.png" alt="Logo" style="width: 140px;">
                    </a>
                </div>

                <!-- Menú central con 4 opciones -->
                <ul class="primer_menu">
                    <li class="dropdown">
                        <a href="#"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                    </li>
                    <li class="dropdown">
                        <a href="#"><i class="fas fa-box"></i>Consulatar Autopartes</a>
                        <ul class="drop-menu">
                            <li><a href="#">Listar Productos</a></li>
                            <li><a href="#">Agregar Producto</a></li>
                            <li><a href="#">Categorías</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#"><i class="fas fa-users"></i>Autopartes</a>
                        <ul class="drop-menu">
                            <li><a href="#">Listar Usuarios</a></li>
                            <li><a href="#">Agregar Usuario</a></li>
                            <li><a href="#">Roles</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#"><i class="fas fa-cogs"></i> Configuración</a>
                    </li>
                </ul>

                <!-- Menú usuario derecho -->
                <ul class="segundo_menu">
                    <li class="dropdown-user">
                        <a href="#"><i class="fas fa-user-circle"></i> Admin</a>
                        <ul class="drop-menu-user">
                            <li><a href="#">Mi perfil</a></li>
                            <li><a href="#">Configuración</a></li>
                            <li>
                                <form>
                                    <button type="submit">Cerrar sesión</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>

                <!-- Botones para móvil -->
                <input type="checkbox" id="menu-btn" class="hidden-input">
                <input type="checkbox" id="close-btn" class="hidden-input">
                <label for="menu-btn" class="btn menu-btn"><i class="fas fa-bars"></i></label>
                <label for="close-btn" class="btn close-btn"><i class="fas fa-times"></i></label>
            </div>

            <!-- Menú móvil -->
            <div class="movil_menu">
                <div class="close-btn-inside">
                    <label for="close-btn"><i class="fas fa-times"></i></label>
                </div>

                <a href="#"><i class="fas fa-tachometer-alt"></i> Dashboard</a>

                <div class="dropdown-movil">
                    <input type="checkbox" id="showProductos-movil" class="hidden-input">
                    <label for="showProductos-movil"><i class="fas fa-box"></i> Productos <i class="fas fa-chevron-down float-end mt-2"></i></label>
                    <ul class="drop-menu-movil">
                        <li><a href="#">Listar Productos</a></li>
                        <li><a href="#">Agregar Producto</a></li>
                        <li><a href="#">Categorías</a></li>
                    </ul>
                </div>

                <div class="dropdown-movil">
                    <input type="checkbox" id="showUsuarios-movil" class="hidden-input">
                    <label for="showUsuarios-movil"><i class="fas fa-users"></i> Usuarios <i class="fas fa-chevron-down float-end mt-2"></i></label>
                    <ul class="drop-menu-movil">
                        <li><a href="#">Listar Usuarios</a></li>
                        <li><a href="#">Agregar Usuario</a></li>
                        <li><a href="#">Roles</a></li>
                    </ul>
                </div>

                <a href="#"><i class="fas fa-cogs"></i> Configuración</a>

                <div class="dropdown-user-movil">
                    <input type="checkbox" id="showAdmin-movil" class="hidden-input">
                    <label for="showAdmin-movil"><i class="fas fa-user-circle"></i> Admin <i class="fas fa-chevron-down float-end mt-2"></i></label>
                    <ul class="drop-menu-movil">
                        <li><a href="#">Mi perfil</a></li>
                        <li><a href="#">Configuración</a></li>
                        <li>
                            <form class="logout-form-movil">
                                <button type="submit" class="logout-button-movil">Cerrar sesión</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
    </div>

    <!-- Contenido principal -->
    <main class="flex-grow-1 container py-4">
        @RenderBody()
    </main>

    <!-- Pie de página -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            &copy; @DateTime.Now.Year - Panel de Administración
        </div>
    </footer>
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
