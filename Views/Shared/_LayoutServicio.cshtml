@{
    Layout = null;
    var path = Context.Request.Path.Value.ToLower();
    var mostrarFlecha = !(path == "/personal_servicio" || path == "/personal_servicio/");
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - - Panel de Servicio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/personalservicio.css" asp-append-version="true" />
    <link rel="shortcut icon" href="images/logo_icon.png">

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100%;
        font-family: "Nunito";
        background-color: white;
        margin: 0;
    }

    html,
    body {
        height: 100%;
    }

    .bungee-spice-regular {
        font-family: "Bungee Spice", sans-serif;
        font-weight: 400;
        font-style: normal;
        font-size: 36px;
    }

    .nunito-regular {
        font-family: 'Nunito', sans-serif;
        font-weight: 400;
    }

    .nunito-semibold {
        font-family: 'Nunito', sans-serif;
        font-weight: 600;
    }

    .nunito-bold {
        font-family: 'Nunito', sans-serif;
        font-weight: 700;
    }

    .nunito-extrabold {
        font-family: 'Nunito', sans-serif;
        font-weight: 800;
    }

    .logo-contenedor {
        margin-left: 0;
    }

    .logo-img {
        height: 60px;
        /* Ajusta el tamaño según necesites */
        border-radius: 5px;
        /* Bordes redondeados para el logo */
    }

    .titulo-centro {
        flex-grow: 1;
        text-align: center;
        font-family: 'Nunito', sans-serif;
        font-size: 32px;
        /* Ajusta el tamaño del texto */
        color: #fff;
        /* Color blanco para el texto */
        letter-spacing: 2px;
        /* Espaciado entre letras para mayor impacto */
        text-transform: uppercase;
        /* Todo en mayúsculas para más énfasis */
        font-weight: 700;
        /* Negrita para mayor visibilidad */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        /* Sombra de texto para hacerlo más llamativo */
    }
</style>

<body>

    <header style="background-color: red; color: white; padding: 10px 20px; margin: 0;">
        <div class="contenedor-menu" style="display: flex; align-items: center; justify-content: space-between;">
            @if (mostrarFlecha)
                {
                    <a href="javascript:window.history.back();" title="Volver atrás"
                        style="color: white; font-size: 24px; margin-right: 16px;">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                }
            <!-- Logo -->
            <a href="/Personal_Servicio" class="logo-contenedor"
                style="display: flex; align-items: center; text-decoration: none;">
                <img src="~/images/logo_marimonWhite.png" alt="Logo Marimon" class="logo-img" style="height: 40px;">
            </a>

            <!-- Título centrado -->
            <h1 class="titulo-centro" style="margin: 0; font-size: 22px; font-weight: bold;">MODULO DE SERVICIOS</h1>

            <!-- Cerrar Sesión -->
            <form asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button
                    style="color: white; font-weight: bold; text-decoration: none; background-color: transparent; border: none;">Cerrar Sesión</button>
            </form>
        </div>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: red; color: white; padding: 10px 20px;">
        <div class="footer-content"
            style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap;">
            <div class="footer-left">Copyright © 2025 Marimon S.A.</div>
            <div class="footer-center">Atendemos con dedicación y respeto</div>
            <div class="footer-right">Developed by Equipo Scrum</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>