@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - - Panel de Servicio</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/css/personalservicio.css" asp-append-version="true" />
        <link rel="shortcut icon" href="images/logo_icon.png">

        <!-- Iconos -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
        <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100%;
            font-family: "Nunito";
        }

        html,
        body {
            height: 100%;
        }

        .bungee-spice-regular {
            font-family: "Bungee Spice", sans-serif;
            font-weight: 400;
            font-style: normal;
            font-size: 36px;
        }

        .nunito-regular {
            font-family: 'Nunito', sans-serif;
            font-weight: 400;
        }

        .nunito-semibold {
            font-family: 'Nunito', sans-serif;
            font-weight: 600;
        }

        .nunito-bold {
            font-family: 'Nunito', sans-serif;
            font-weight: 700;
        }

        .nunito-extrabold {
            font-family: 'Nunito', sans-serif;
            font-weight: 800;
        }
    </style>
<body>
    <header>
        <div class="contenedor-menu">
            <!-- Logo -->
            <a href="/Personal_Servicio" class="logo-contenedor">
                <img src="~/images/logo_marimonWhite.png" alt="Logo Marimon" class="logo-img">
            </a>

            <!-- Título centrado -->
            <a href="/Personal_Servicio" class="titulo-header">Módulo de Servicio Automotriz</a>

            <!-- Botón de cerrar sesión -->
            <a href="/Identity/Account/Logout" class="logout-btn">Cerrar sesión</a>
        </div>
    </header>

    <div class="container">
         <main role="main">
             @RenderBody()
         </main>
    </div>

    <footer>
    <div class="footer-content">
        <div class="footer-left">Copyright © 2025 Marimon S.A.</div>
        <div class="footer-center">Atendemos con dedicación y respeto</div>
        <div class="footer-right">Developed by Equipo Scrum</div>
    </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>