@model Marimon.Models.Servicio

<form asp-action="Actualizar" asp-controller="Personal_Servicio" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="ser_id" />
    <div class="modal-header">
        <h5 class="modal-title">Modificar Servicio</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="mb-3">
            <label for="ser_nombre" class="form-label">Nombre del Servicio</label>
            <input asp-for="ser_nombre" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="ser_descripcion" class="form-label">Descripción</label>
            <textarea asp-for="ser_descripcion" class="form-control" required></textarea>
        </div>
        <div class="mb-3">
            <label for="imagen" class="form-label">Imagen</label>
            @if (!string.IsNullOrEmpty(Model.ser_imagen))
            {
                <div class="mb-2 text-center">
                    <img src="@Model.ser_imagen" alt="Imagen Actual" class="img-fluid" style="max-width: 200px; max-height: 200px;" />
                </div>
            }
            <input type="file" name="imagen" class="form-control" accept="image/*" />
            <small class="text-muted">Deja este campo vacío si no deseas cambiar la imagen.</small>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Guardar Cambios</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>