@model List<Servicio>

<div>
    <label>Servicio</label>
    <select class="form-select" id="servicioSelect">
        <option value="">-- Selecciona un servicio --</option>
        @foreach (var servicio in Model)
        {
            <option value="@servicio.ser_id">@servicio.ser_nombre</option>
        }
    </select>
</div>

<div id="reservasContainer" class="mt-3">
    <label>Reservas</label>
    <select class="form-select" id="reservaSelect" disabled>
        <option value="">Selecciona un servicio primero</option>
    </select>
</div>

<div class="mt-3">
    <label for="descripcionInput">Descripci√≥n del trabajo</label>
    <textarea class="form-control" id="descripcionInput" rows="3" placeholder="Describe el trabajo realizado..."></textarea>
</div>


<input type="hidden" id="reservaSeleccionada" />

<div class="mt-3 text-end">
    <button id="btnRegistrarOrden" class="btn btn-success" disabled>Registrar Orden</button>
</div>
