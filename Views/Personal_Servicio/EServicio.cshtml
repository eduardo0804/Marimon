@model IEnumerable<Marimon.Models.Servicio>
@{
    Layout = "~/Views/Shared/_LayoutServicio.cshtml";
}

<link href="/css/personalservicio.css" rel="stylesheet" type="text/css">
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success success-message position-fixed" role="alert">
        <strong>Éxito</strong>: @TempData["SuccessMessage"]
        <button type="button" class="btn-close" aria-label="Close" onclick="this.parentElement.remove();"></button>
    </div>
}
<div class="container-fluid px-0">
    <div class="row bg-danger text-white py-2">
        <div class="col-12">
            <h2 class="mb-0 text-center" style="font-weight: bold;">GESTIÓN DE SERVICIOS</h2>
        </div>
    </div>
    <div class="row align-items-center my-4 px-4">
        <div class="col-md-3 text-center">
            <img src="https://firebasestorage.googleapis.com/v0/b/marimonapp.appspot.com/o/Assest_web%2FServicios%2Fservicios-marimon-02.jpg?alt=media&token=c30ee586-a8e0-4ac0-be4e-cfa9a9adc4d7.jpg" alt="Servicios" class="img-fluid" style="max-height: 220px;" />
        </div>
        <div class="col-md-6">
            <p class="fs-4 fw-bold mb-2">
                Administra y elimina los servicios automotrices registrados. Confirma antes de realizar cualquier acción.
            </p>
        </div>
    </div>
    <div class="row px-4">
        <div class="col-12">
            <table class="table table-bordered table-striped align-middle">
                <thead class="bg-black text-white">
                    <tr>
                        <th style="width: 5%;">ID</th>
                        <th style="width: 10%;">Imagen</th>
                        <th style="width: 20%;">Nombre del Servicio</th>
                        <th style="width: 50%;">Descripción</th>
                        <th style="width: 15%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var servicio in Model)
                        {
                            <tr>
                                <td>@servicio.ser_id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(servicio.ser_imagen))
                                    {
                                        <img src="@servicio.ser_imagen" alt="Imagen Servicio"
                                            style="max-width: 60px; max-height: 60px;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light border text-center" style="width:60px;height:60px;line-height:60px;">
                                            Sin<br />img</div>
                                    }
                                </td>
                                <td class="fw-bold">@servicio.ser_nombre</td>
                                <td>@servicio.ser_descripcion</td>
                                <td>
                                    <button class="btn btn-primary btn-sm" onclick="confirmDelete(@servicio.ser_id)">
                                        <i class="fa fa-trash"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No hay servicios registrados.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal de confirmación para eliminar -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro que deseas eliminar este servicio? Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            const deleteForm = document.getElementById('deleteForm');
            deleteForm.action = '/Personal_Servicio/Eliminar/' + id;
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            deleteModal.show();
        }
        document.addEventListener("DOMContentLoaded", function () {
        const successMessage = document.querySelector(".success-message");
        if (successMessage) {
            setTimeout(() => {
                successMessage.classList.add("hide");
                setTimeout(() => successMessage.remove(), 500);
            }, 10000);
        }
    });
    </script>
    <script src="~/js/home.js" asp-append-version="true"></script>
}